	Else	
		DangerZoneGate.visible = 0
		DangerZoneGate.collidable = 0
		P_DangerZonePost.visible = 1
		DangerZonePin.isdropped = 0
	End If	
 	
	'Table elements
	boxer.objRotZ=0 
	leftArm.objRotZ=0
	rightArm.objRotZ=0

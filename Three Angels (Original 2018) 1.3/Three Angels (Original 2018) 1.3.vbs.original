Sub ChoseAnArc()

	Azar = int (rnd*6)

	'--------------------------
	'   A M A T H I E L
	'--------------------------
	If ARC1Name = 0 then

		ARC1Name = 1
		PlaySound "arc_amathiel"

	ElseIf ARC1Name <> 0 then

		ChoseAnArc()

	End If


	'--------------------------
	'   I T H U R I E L
	'--------------------------
	If ARC2Name = 0 then

		ARC1Name = 2
		PlaySound "arc_ithuriel"

	ElseIf ARC1Name <> 0 then

		ChoseAnArc()

	End If



	'--------------------------
	'   M I C H A E L
	'--------------------------
	If ARC3Name = 0 then

		ARC1Name = 3
		PlaySound "arc_michael"

	ElseIf ARC1Name <> 0 then

		ChoseAnArc()

	End If



	'--------------------------
	'   R A P H A E L
	'--------------------------
	If ARC4Name = 0 then

		ARC1Name = 4
		PlaySound "arc_raphael"

	ElseIf ARC1Name <> 0 then

		ChoseAnArc()

	End If



	'--------------------------
	'   R E M I E L
	'--------------------------
	If ARC5Name = 0 then

		ARC1Name = 5
		PlaySound "arc_remiel"

	ElseIf ARC1Name <> 0 then

		ChoseAnArc()

	End If


	'--------------------------
	'   U R I E L
	'--------------------------
	If ARC6Name = 0 then

		ARC1Name = 6
		PlaySound "arc_uriel"

	ElseIf ARC1Name <> 0 then

		ChoseAnArc()

	End If

End Sub





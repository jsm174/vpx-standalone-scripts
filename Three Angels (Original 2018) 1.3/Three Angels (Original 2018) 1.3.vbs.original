Sub df3

	dim lon
	lon = len(PossesionForceDMD)

	PossesionForceDMD = "~"
	for azar = 1 to lon-3
		PossesionForceDMD = PossesionForceDMD + "d"
		'DMD2.QueueText PossesionForceDMD, seBlinkMask : 'DMDB.QueueText PossesionForceDMD, seBlinkMask
	next


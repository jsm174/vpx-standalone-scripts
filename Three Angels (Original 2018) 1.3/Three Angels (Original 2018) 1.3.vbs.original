Sub TrapEntranceOpto_Hit : StopBallSearchTimer()

	TrapTrigger0Pressed = TRUE

	If Locating > 0 or vpTilted = TRUE then 'We are locating the balls
		Exit Sub
	End If


	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then

		Exit Sub

	End If



	'-----------------------------------
	' - SKILL SHOT -=[ AVOIDED ]=-
	'-----------------------------------
	If SkillShotActive = TRUE then 'There is a small possibility that ball bounce and avoid the SSkicker. So, we have to turn off the Skillshot

		SSMessageOver()
		SSOver() 'SkillShoot Over
		
		CheckForThingsThatHaveToBeRestarted() 'Let's check if a demon is inside the trap or an angel needs to be rescued. 

	End If






	'===========================-----
	'--=[ TRAP ON ]=-------------
	'===========================-----
	If TrapTurnedON = TRUE then
	
		
		'--------------------------------
		'--= DEMON INSIDE =-------------
		'--------------------------------
		If DemonInsideTrap = TRUE then
		
			If DemonTrying2Escape = TRUE and DemonInLevel = 1 then
			
				If DemonCouldEscapeNOW = TRUE then
				
					DemonEscaped()
					
					
					If TrapPROBLEMTimer.Enabled = TRUE then 'There was a problem with the trap, and we were dropped and moving its elements.
					
						TrapPROBLEMTimer.Interval = 10
						TrapPROBLEMTimer.UserValue = 25 'Once the ball has escaped, we have to raise the trap targets again.
					
					End If
					
					Exit Sub
				
				End If
			
			End If
		
		
		
		
		
		
		'--------------------------------
		'--= ANGEL INSIDE =-------------
		'--------------------------------
		ElseIf AngelInsideTrap = TRUE then
		
			If AngelInLevel = 1 then
			
				If AngelCouldEscapeNOW = TRUE then
				
					AngelEscaped()
					
					
					If TrapPROBLEMTimer.Enabled = TRUE then 'There was a problem with the trap, and we were dropped and moving its elements.
					
						TrapPROBLEMTimer.Interval = 10
						TrapPROBLEMTimer.UserValue = 25 'Once the ball has escaped, we have to raise the trap targets again.
					
					End If
					
					Exit Sub
				
				End If
			
			End If
		
		End If


	End If

End Sub







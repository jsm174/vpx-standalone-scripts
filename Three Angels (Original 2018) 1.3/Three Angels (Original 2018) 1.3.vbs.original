				LightSeqTilt.UpdateInterval = 80
				LightSeqTilt.Play SeqUpOn, 100
			
			BootupTimer.Interval = 6000
			BootupTimer.UserValue = BootupTimer.UserValue + 1
		
		Case 251
		
				Boom100LostSouls()
			
				AzarSoundLostSoul()

Sub SoundTimer_Timer()

	POGDrainComment = FALSE 'We said a comment if the balls drains after hittin the PoG, this will disconnect it


	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then

		If WizModeOpeningWoundActive = TRUE then
		
			SoundTimer.Enabled = FALSE
			
			Exit Sub 'No sounds during opening wounds, thanks!
		
		End If
		
		
		Azar = int (rnd * 4)
		If azar = 0 then
			AzarVoiceScream()
		ElseIf azar = 1 then
			AzarSoundDemonVoices()
		ElseIf azar = 2 then
			AzarSoundGhostVoices()
		Else
			AzarSoundDemonVoicesSt()
		End If
		
		SoundTimer.Enabled = FALSE
		
		Exit Sub

	End If




	'--------------------------    
	' MIDNIGHT DARKNESS
	'--------------------------    
	If MidnightDarknessActive = TRUE then

		Azar = int (rnd * 4)
		If azar = 0 then
			AzarVoiceScream()
		ElseIf azar = 1 then
			AzarSoundDemonVoices()
		ElseIf azar = 2 then
			AzarSoundGhostVoices()
		Else
			AzarSoundHitBloody()
		End If
		
		SoundTimer.Enabled = FALSE
		
		Exit Sub

	End If


	If SoundTimer.UserValue <> 666 then

		Azar = int (rnd * 5)
		If azar = 0 then
		
			If DemonOnPlayfield = TRUE and DemonInsideTrap = FALSE then 'If there is a demon on the pf but it is not in the trap... 
				AzarVoiceScream()
			Else
				AzarSoundAnimal()
			End If
		
		
		ElseIf azar = 1 then
			AzarSoundDemonVoices()
		ElseIf azar = 2 then
		
			x = int (rnd*2)
			If x = 0 then
				AzarSoundGhostVoices()
			Else
				AzarSoundGhostWhispers()
			End If
		
		ElseIf azar = 3 then
		
			x = int (rnd*2)
			If x = 0 then
				AzarSoundThunder()
			Else
				AzarSoundGhostWhispers()
			End If
			
		ElseIf azar = 4 then
		
			If DemonOnPlayfield = FALSE then
				AzarSoundGhostWhispers()
			Else
				AzarVoiceFear()
			End If
		
		End If
		
		
		SoundTimer.Enabled = FALSE
		
		Exit Sub


	End If






	'==================================----   
	' -=[ BUMPER HELP ]=-
	'==================================----   
	Select Case (SoundTimer.UserValue)
	Case 666

		'PlaySound "fx_gun_shell_drop"
		
		BumperPopup.IsDropped = true 'This PopUP is to avoid the ball to be out of the bumper area too soon
		
		SoundTimer.Enabled = FALSE
		
 		SoundTimer.UserValue = 0 'We need to reset this one.
		
		Exit Sub

	End Select




End Sub


Sub PlungerTimer_Timer()

	If (PlungerForce<0) then
		PlungerForce = 0
		WayofPulling = 1 'This makes you 2 pull the plunger 
		
	'ElseIf (PlungerForce>=0) and (PlungerForce<10) Then
	'	PlungerForce = Plungerforce + ( 3 * WayOfPulling)
	'	Plunger.pull(PlungerForce)
		
	'ElseIf (PlungerForce>=10) and (PlungerForce<20)then
	'	PlungerForce = Plungerforce + ( 5 * WayOfPulling)
	'	Plunger.pull(PlungerForce)
		
	ElseIf (PlungerForce>=0) and (PlungerForce<30)then
		PlungerForce = Plungerforce + ( 1 * WayOfPulling)
		Plunger.PullBack'(PlungerForce)
		
	ElseIf (Plungerforce>=30) and (PlungerForce<50) then
		PlungerForce = Plungerforce + ( 3 * WayOfPulling)
		Plunger.PullBack'(PlungerForce)
		
	ElseIf (Plungerforce>=50) and (PlungerForce<70) then
		PlungerForce = Plungerforce + ( 5 * WayOfPulling)
		Plunger.PullBack'(PlungerForce)
		
	ElseIf (PlungerForce>=70) and (PlungerForce<=100) then
		PlungerForce = PlungerForce + ( 8 * WayOfPulling)
		Plunger.PullBack'(PlungerForce)
		
	ElseIf (PlungerForce>100) then
		PlungerForce = 99
		WayofPulling = -1 'This makes you 2 "unpull" the plunger 
	End if




'==============================================--------------------

Sub CheckClock()

	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then
		Exit Sub 'No help during the mball
	End If

	'-----------------------------------------
	'--=[ BLOOD EXTRACTOR MBALL ]=-----
	'-----------------------------------------
	If BloodExtractorMballEnabled = TRUE then

		Exit Sub 'No help during the mball
	
	End If

	'-----------------------------------------
	'--=[ MIDNIGHT DARKNESS ]=-----
	'-----------------------------------------
	If MidnightDarknessReady = TRUE then
		Exit Sub
	End If

	If MidnightDarknessActive = TRUE then
		Exit Sub
	End If

	'-----------------------------------------
	'--=[ DEMON POSSESING ANGEL ]=-----
	'-----------------------------------------
	If PossesionTimer.Enabled = TRUE then
		Exit Sub
	End If



	'--------------------------
	' DARKNESS COMPLETED TABLE
	'--------------------------
	'-=[ 000 TIMES ]=- (5 + 0*2) =  5 HITS TO ADVANCE CLOCK
	'-=[ 001 TIMES ]=- (5 + 1*2) =  7 HITS TO ADVANCE CLOCK
	'-=[ 002 TIMES ]=- (5 + 2*2) =  9 HITS TO ADVANCE CLOCK
	'-=[ 003 TIMES ]=- (5 + 3*2) = 11 HITS TO ADVANCE CLOCK

	'=========================================================-------------------   
	'  --=[ A D V A N C E  H O U R ]=-- 
	'=========================================================-------------------   
	If BumperHits < (5 + (MidnightDarknessTimesCompleted * 2)) then

		AddScore(50)
		
		BumperHits = BumperHits + 1
		
		PlaySound "fx_clock_ab"
		'PlaySound "fx_ticking"
		
		'--------------------------------
		'--=[ 2A MBALL ]=-----
		'--------------------------------
		If TwoAngelsMballActive = FALSE and SummonDemonTimer.Enabled = FALSE then 'The 2XJACKPOT is ready... and time is runnin'... so no mess with the DMD thanx!!
			DMD_CancelRendering
			'DMD1.FlushQueue : 'DMD2.FlushQueue
			DMD_DisplayScene "HOURS TO MIDNITE","- 06=20  HOURS -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
			'DMD1.QueueText "HOURS TO MIDNITE", seNone
			''DMD2.QueueText "- 06=20  HOURS -", seWipeStarRight
			
			'DMDA.FlushQueue : 'DMDB.FlushQueue
			'DMDA.QueueText "HOURS TO MIDNITE", seNone
			
			Select Case (BumperHits)
			Case 1: Text = "10"
			Case 2: Text = "20"
			Case 3: Text = "30"
			Case 4: Text = "40"
			Case 5: Text = "50"
			End Select
			
			Select Case (Clock)
			Case 6:
				DMD_DisplayScene "- 18="& Text,"  HOURS -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
				'DMD2.QueueText "- 18=" & Text & "  HOURS -", seWipeStarRight
				'DMDB.QueueText "- 18=" & Text & "  HOURS -", seWipeStarRight
			Case 7:
				DMD_DisplayScene "- 19="& Text,"  HOURS -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
				'DMD2.QueueText "- 19=" & Text & "  HOURS -", seWipeStarLeft
				'DMDB.QueueText "- 19=" & Text & "  HOURS -", seWipeStarLeft
			Case 8:
				DMD_DisplayScene "- 20="& Text,"  HOURS -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
				'DMD2.QueueText "- 20=" & Text & "  HOURS -", seWipeStarRight
				'DMDB.QueueText "- 20=" & Text & "  HOURS -", seWipeStarRight
			Case 9:
				DMD_DisplayScene "- 21="& Text,"  HOURS -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
				'DMD2.QueueText "- 21=" & Text & "  HOURS -", seWipeStarLeft
				'DMDB.QueueText "- 21=" & Text & "  HOURS -", seWipeStarLeft
			Case 10:
				DMD_DisplayScene "- 22="& Text,"  HOURS -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
				'DMD2.QueueText "- 22=" & Text & "  HOURS -", seWipeStarRight
				'DMDB.QueueText "- 22=" & Text & "  HOURS -", seWipeStarRight
			Case 11:
				DMD_DisplayScene "- 23="& Text,"  HOURS -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
				'DMD2.QueueText "- 23=" & Text & "  HOURS -", seWipeStarLeft
				'DMDB.QueueText "- 23=" & Text & "  HOURS -", seWipeStarLeft
			Case 12:
				DMD_DisplayScene "- JUST MINUTES -","- JUST MINUTES -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
				'DMD2.QueueText "- JUST MINUTES -", seWipeStarRight
				'DMDB.QueueText "- JUST MINUTES -", seWipeStarRight
			End Select
		
		End If


	'=========================================================-------------------   
	'  --=[ A D V A N C E  H O U R ]=-- 
	'=========================================================-------------------   
	ElseIf BumperHits => (5 + (MidnightDarknessTimesCompleted * 2)) then
	
			AddScore(500)
		
		Clock = Clock + 1
		
		BumperHits = 0
		
		FlashForms FlasherUPL, 700, 700, 0
		FlashForms FlasherUPR, 700, 700, 0
		FlashForms FlasherGateL, 700, 700, 0
		FlashForms FlasherGateR, 700, 700, 0
		
		FlashForms LeftSlingshotUPBulb1, 1000, 50, 0
		FlashForms RightSlingshotUPBulb1, 1000, 50, 0
		
		
			BumperPopup.isdropped = true 'This PopUP is to avoid the ball to be out of the bumper area too soon
			
			SoundTimer.UserValue = 666
			SoundTimer.Interval = 5000
			SoundTimer.Enabled = TRUE 'We add some time to the post timer. We dont want to help too much advancinge the clock
		
		
		''DMD1.QueueText "HOURS TO MIDNITE", seNone
		''DMD2.QueueText " -- 06 HOURS -- ", seWipeStarRight
		
		BoomClockAdvance()
		BoomTimer.Interval = 5000
		BoomTimer.Enabled = TRUE
		DMD_CancelRendering
		'DMD1.FlushQueue : 'DMD2.FlushQueue
		DMD_DisplayScene "HOURS TO MIDNITE","", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD1.QueueText "HOURS TO MIDNITE", seNone, 1500
		
		'DMDA.FlushQueue : 'DMDB.FlushQueue
		'DMDA.QueueText "HOURS TO MIDNITE", seNone, 1500
		
		
		Select Case (Clock)
		Case 7
		
			PlaySound "fx_belllong"
			'BoomClock0700()
			DMD_DisplayScene "HOURS TO MIDNITE","- 19=00 OCLOCK -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
			'DMD2.QueueText "- 19=00 OCLOCK -", seWipeStarRight
			'DMD2.QueueText "  19            ", seBlinkMask, 1400
		
			'DMDB.QueueText "- 19=00 OCLOCK -", seWipeStarRight
			'DMDB.QueueText "  19            ", seBlinkMask, 1400
		
		Case 8
		
			PlaySound "fx_belllong"
			'BoomClock0800()
			DMD_DisplayScene "HOURS TO MIDNITE","- 20=00 OCLOCK -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
			'DMD2.QueueText "- 20=00 OCLOCK -", seWipeStarRight
			'DMD2.QueueText "  20            ", seBlinkMask, 1400
		
			'DMDB.QueueText "- 20=00 OCLOCK -", seWipeStarRight
			'DMDB.QueueText "  20            ", seBlinkMask, 1400
		
		Case 9
		
			PlaySound "fx_belllong"
			'BoomClock0900()
			DMD_DisplayScene "HOURS TO MIDNITE","- 21=00 OCLOCK -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
			'DMD2.QueueText "- 21=00 OCLOCK -", seWipeStarRight
			'DMD2.QueueText "  21            ", seBlinkMask, 1400
		

			TrapPROBLEMTimer.UserValue = TrapPROBLEMTimer.UserValue + 1
		
		Case 2
		
			TrapDT1UP.IsDropped = True
			'PlaySound "droptargetdropped"
			'PlaySound "fx_motor_lift"
			PlaySound "fx_motor_pump03"
			
			TrapPROBLEMTimer.Interval = 200
			TrapPROBLEMTimer.UserValue = TrapPROBLEMTimer.UserValue + 1
		
		Case 3
		
			TrapDT2UP.IsDropped = True
			PlaySound "droptargetdropped"
			

		'DMD1.QueueText "-DOOR MULTIBALL-", seWipeBarUp, 1000 : 'DMDA.QueueText "-DOOR MULTIBALL-", seWipeBarUp, 1000
		'DMD2.QueueText "- I S  O V E R -", seWipeBarDown, 1000 : 'DMDB.QueueText "- I S  O V E R -", seWipeBarDown, 1000
		

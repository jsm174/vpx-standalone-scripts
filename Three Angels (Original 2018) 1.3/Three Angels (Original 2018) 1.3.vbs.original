		'------------------------------------------------------------------------------
		
			If TrapTrigger1Pressed = TRUE then
				TrapPROBLEMTimer.Enabled = FALSE
				Exit Sub
			End If
			
			If TrapTrigger2Pressed = TRUE then
				TrapPROBLEMTimer.Enabled = FALSE
				Exit Sub
			End If
			
			If TrapTrigger3Pressed = TRUE then
				TrapPROBLEMTimer.Enabled = FALSE
				Exit Sub
			End If
			

				TrapGoingUpDownTimer.Enabled = FALSE
				TrapHeartTimer.Enabled = FALSE 'heartbeat off

			

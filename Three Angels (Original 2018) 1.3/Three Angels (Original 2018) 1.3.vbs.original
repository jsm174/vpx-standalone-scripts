Sub BEMBallLock1Timer_Timer()

	Select Case (BEMBallLock1Timer.UserValue)
	'---------------------------------------------------
	Case 0 'FLASHING - 3
	'---------------------------------------------------
	
			FlashForms TrapLight13, 2000, 100, 0
		
		BEMBallLock1Timer.Interval = 1000
		BEMBallLock1Timer.UserValue = BEMBallLock1Timer.UserValue + 1
	
	Case 1
	
		PlaySound "fx_pipe03"
		
		BEMBallLock1Timer.Interval = 1000
		BEMBallLock1Timer.UserValue = BEMBallLock1Timer.UserValue + 1
	
	'---------------------------------------------------
	Case 2 'FLASHING - 2
	'---------------------------------------------------
	
		PlaySound "fx_chan002"
		
			FlashForms TrapLight12, 2000, 50, 0
		
		AzarSoundWoodCracking()
		
		BEMBallLock1Timer.Interval = 1500
		BEMBallLock1Timer.UserValue = BEMBallLock1Timer.UserValue + 1
	
	Case 3
	
		'FlasherTrapL.FlashForMs 500, 50, 0			
		'FlasherTrapR.FlashForMs 500, 50, 0
		
		BEMBallLock1Timer.Interval = 500
		BEMBallLock1Timer.UserValue = BEMBallLock1Timer.UserValue + 1
	
	'---------------------------------------------------
	Case 4 'FLASHING - 1
	'---------------------------------------------------

			FlashForms TrapLight11, 2000, 25, 0
		
		FlashForMs FlasherTrapL, 2000, 2000, 0
		FlashForMs FlasherTrapR, 2000, 2000, 0
		
		PlaySound "fx_elevator1"
		PlaySound "fx_pipe01"
		
		BEMBallLock1Timer.Interval = 300
		BEMBallLock1Timer.UserValue = BEMBallLock1Timer.UserValue + 1
		
	
	Case 5

			FlashForMs TrapTrigger1Bulb, 2000, 25, 0
			
			'PlaySound "vcom_accessing1"
		
		BEMBallLock1Timer.Interval = 1000
		BEMBallLock1Timer.UserValue = BEMBallLock1Timer.UserValue + 1

	Case 6

		If BEMBallLock2Timer.UserValue >= 8 and BEMBallLock3Timer.UserValue >= 8 then 'We dont want to mess sounds
		
			PlaySound "vcom_1"
		
		End If
		
			FlashForMs TK1L1, 700, 20, 0
			FlashForMs TK1L2, 600, 20, 0
			FlashForMs TK1L3, 400, 20, 0
			FlashForMs TK1L4, 200, 20, 0
		
		BEMBallLock1Timer.Interval = 700
		BEMBallLock1Timer.UserValue = BEMBallLock1Timer.UserValue + 1


	Case 7

		If BEMBallLock2Timer.UserValue >= 8 and BEMBallLock3Timer.UserValue >= 8 then 'We dont want to mess sounds
		
			PlaySound "vcom_rejected"
		
		End If
		
		PlaySound "fx_hit_super2"
		

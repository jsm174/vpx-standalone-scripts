			Exit Sub
		
		End If
	
	End If


	'------------------------------------------------------------------
	'--=[ DEMON & ANGEL ON PF ]=-----
	'------------------------------------------------------------------
	If DemonOnPlayfield = TRUE and DemonInsideTrap = FALSE and AngelOnPlayfield = TRUE then
	
		Azar = int (rnd*4)
		If Azar = 0 then
		
			BonusLitesTimer.UserValue = 666 'demonfun1
			BonusLitesTimer.Interval = 400
			BonusLitesTimer.Enabled = TRUE 'Let's have a bit of fun with the players :)
		
		End If
		
	
	End If







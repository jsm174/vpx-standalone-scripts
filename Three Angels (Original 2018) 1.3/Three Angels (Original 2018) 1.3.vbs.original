Sub PossesionElements2OriginalPosition()

	PortalLitesOFF()

	PossesionLevel = 0

	' NO NEED TO DE-ACTIVATE!!!!
	'---------------------------
	'---=[ PoG ]=----	
	'---------------------------
	'If POGwasActivated = TRUE then 'PoG was activated when the possesion started, so we revert the PoG now.
	'
	'	PowerOfGodActive = FALSE
	'
	'End If




	'---------------------------
	'---=[ SPINNERS ]=----
	'---------------------------
		mDISC.MotorOn = 0 'Spinners were turning
		LmDISC.MotorOn = 0'SolenoidOFF
		
		If GateGuardianRKilled = FALSE then
			SpinningDiskBulbR.State = 1
		Else
			SpinningDiskBulbR.State = 0
		End If
		
		If GateGuardianLKilled = FALSE then
			SpinningDiskBulbL.State = 1
		Else
			SpinningDiskBulbL.State = 0
		End If


	'---------------------------
	'---=[ GUARDIANS ]=----
	'---------------------------
	If GateGuardians = 0 then

		MoveGuardianKickerLitesNow = FALSE 'No guardians, no need to destroy them

	Else

		If MidnightDarknessActive = FALSE and DemonTryingToPossesAngel = FALSE then
		
			MoveGuardianKickerLitesNow = TRUE 'Now we could move the lites
			CheckGuardianKickerLites()
		
		End If

	End If


	'---------------------------
	'---=[ HELL & GATES ]=----
	'---------------------------
		If LeftGateBroken = TRUE and RightGateBroken = TRUE then
		
			OpenHellDoors()
			
			ShowHellEntranceLites() 'This will turn on the hell entrance lights!
		
		Else
		
			HellPopupR1.isdropped = false
			HellPopupR2.isdropped = false
			HellPopupL1.isdropped = false
			HellPopupL2.isdropped = false
			
			FinishQuickshotL() 'This will set the lights and targets according to the state of the guardians
			FinishQuickshotR()
		
		End If
		
		
		
		HellKickerBulb2.State = 0
		HellKickerBulb.State = 0
		
		AngelInHellLightL.State = 0
		AngelInHellLightM.State = 0
		AngelInHellLightR.State = 0
		
		If AngelsInHell => 1 then
			AngelInHellLightL.State = 1
		End If
		If AngelsInHell => 2 then
			AngelInHellLightR.State = 1
		End If
		If AngelsInHell => 3 then
			AngelInHellLightM.State = 1
		End If
		


	'---------------------------
	'---=[ BLACKSMITH ]=-----
	'---------------------------
	'It's better to pop down those targets, so the player see better the hell area and flashing lights!
	AnvilTargetL.IsDropped = False
	AnvilTargetR.IsDropped = False
	PlaySound SoundFXDOF("droptargetreset", 111, DOFPulse, DOFContactors)



	If BlackSmithEntranceReady = TRUE then

		'We turned them off
		BlinkBlackSmithLites()

	Else

		AnvilLightL.State = 1
		AnvilLightR.State = 1

	End If



	'------->>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>><
	'---=[ TRAP!!! ]=-----
	'------->>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>><
	'Just in case they're blinking
	TrapLight11.State = 0 : TrapLight12.State = 0 : TrapLight13.State = 0
	TrapLight21.State = 0 : TrapLight22.State = 0 : TrapLight23.State = 0
	TrapLight31.State = 0 : TrapLight32.State = 0 : TrapLight33.State = 0

End Sub









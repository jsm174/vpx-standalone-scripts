'==========================================----------------
' LIT THE CORRECT LS LITES
'==========================================----------------

Sub LightCorrectSouls()

	'----------------------------------
	' - THE SOULRING -
	'----------------------------------
	If BallSaverTimer.Enabled = TRUE and BallSaverTimer.UserValue < 0 then
	
		Exit Sub 'We used the soul lites for the ball save animation. So we dont want to mess the players.
		'Anyway, the correct souls will be lit when the ballsaver timer ends... so just be patient and wait a couple of secs :)
		'I know it's hard to be pattient when you know u r going 2 die... And I'm meaning not in this small game u r playing ;)

	End If




	TurnOffLostSoulsLites()

	'----------------------------------------
	' - UNIDADES -
	'----------------------------------------
	If LostSoulsTrapped < 10 then

		azar2 = LostSoulsTrapped 

	ElseIf LostSoulsTrapped >= 10 then

		azar2 = LostSoulsTrapped - (int(LostSoulsTrapped/10)*10)
	
	End If


	If azar2 >= 1 then
		LostSoulLight1.State = 1
	End If
	
	If azar2 >= 2 then
		LostSoulLight2.State = 1
	End If
	
	If azar2 >= 3 then
		LostSoulLight3.State = 1
	End If
	
	If azar2 >= 4 then
		LostSoulLight4.State = 1
	End If
	
	If azar2 >= 5 then
		LostSoulLight5.State = 1
	End If
	
	If azar2 >= 6 then
		LostSoulLight6.State = 1
	End If
	
	If azar2 >= 7 then
		LostSoulLight7.State = 1
	End If
	
	If azar2 >= 8 then
		LostSoulLight8.State = 1
	End If
	
	If azar2 >= 9 then
		LostSoulLight9.State = 1
	End If


	'----------------------------------------
	' - DECENAS -
	'----------------------------------------
	If LostSoulsTrapped >= 10 then

		azar = int(LostSoulsTrapped/10)
		
		Select Case (azar)
		Case 1
			LostSoulLight10.State = 1
		Case 2
			LostSoulLight10.State = 1
			LostSoulLight20.State = 1
		Case 3
			LostSoulLight3.State = 2
		Case 4
			LostSoulLight4.State = 2
		Case 5
			LostSoulLight5.State = 2
		Case 6
			LostSoulLight6.State = 2
		Case 7
			LostSoulLight7.State = 2
		Case 8
			LostSoulLight8.State = 2
		Case 9
			LostSoulLight9.State = 2
		'Case 10
		'	LostSoulLight10.State = 2
		End Select
		
		If Azar => 3 then
			LostSoulLight10.State = 1
			LostSoulLight20.State = 1
		End If
		
		If Azar => 10 and Azar < 20 then
			LostSoulLight1.State = 2
		End If
		
		If Azar => 20 and Azar < 30 then
			LostSoulLight2.State = 2
		End If
		
		If Azar => 100 and Azar < 199 then
			LostSoulLight10.State = 2
		End If
		
		If Azar => 200 and Azar < 299 then
			LostSoulLight20.State = 2
		End If



	End If
	
End Sub




Sub BloodExtractorKicker_Hit : StopBallSearchTimer()

	'If fpballid = 666 then
	if activeball.image = "bo" then
		BloodExtractorKickerBallIsADemon = TRUE
	Else
		BloodExtractorKickerBallIsADemon = FALSE
	End If



		FlippersActive = FALSE 'No flippers movement beyond this point
		
		LeftFlipper.RotateToStart : RightFlipper.RotateToStart
		LeftFlipperUP.RotateToStart : RightFlipperUP.RotateToStart
			PlaySound SoundFXDOF("fx_flipperdown", 101, DOFOff, DOFFlippers)
			PlaySound SoundFXDOF("fx_flipperdown", 102, DOFOff, DOFFlippers)

	LightSeqTilt.Play SeqAllON
	
	FlashForms FlasherUPR, 1400, 40, 0
	FlashForms FlasherUPC, 1500, 50, 0
	FlashForms FlasherUPL,  600, 60, 0
	FlashForms FlasherGateR, 700, 70, 0
	FlashForms FlasherGateL, 800, 80, 0
	
	FlashForms FlasherTrapL, 600, 30, 0
	FlashForms FlasherTrapR, 700, 70, 0
	FlashForms FlasherCentral, 1200, 60, 0
	FlashForms FlasherSS, 1000, 50, 0




		TrapPROBLEMTimer.Enabled = FALSE 'We dont want the blood extractor machine to start looking 4 the ball...
		
		TrapGoingUpDownTimer.Enabled = FALSE 'We stop the fleeing plan
		
		TrapHeartTimer.Enabled = FALSE





	'=====================================----------  
	'-=[ DEMON ON THE BLOOD EXTRACTOR ]=----------
	'=====================================----------  
	If BloodExtractorKickerBallIsADemon = TRUE then

			DemonInTheBloodExtractor = TRUE
			
			BallSaverActive = FALSE 'Ball could be lost before the ball reach the kicker, so we activated the ballsaver to avoid problems
			BallSaverTimer.Enabled = FALSE
			
			'When the ball on the playfield drains it would start:
			'ExtractingDemonBlood()
		
		TrapEmpty = TRUE
		
		DemonOnPlayfield = FALSE
		
		DemonInsideTrap = FALSE
		DemonTrying2Escape = FALSE
		
		DemonInLevel = 0
		
		
		'JUST IN CASE THE ENGINE GET MESSED... That should not happen, but you know... shit happens.
		'--------------------------------------
		AngelInsideTrap = FALSE
		AngelCouldEscapeNOW = FALSE
		
		AngelInLevel = 0




	'=====================================----------  
	'-=[ ANGEL ON THE BLOOD EXTRACTOR ]=----------
	'=====================================----------  
	ElseIf BloodExtractorKickerBallIsADemon = FALSE then

			AngelInTheBloodExtractor = TRUE
			
			BallSaverActive = FALSE 'Ball could be lost before the ball reach the kicker, so we activated the ballsaver to avoid problems
			BallSaverTimer.Enabled = FALSE
			
			'When the ball on the playfield drains it would start:
			'ExtractingAngelBlood()
		
		TrapEmpty = TRUE
		
		AngelOnPlayfield = FALSE
		
		AngelInsideTrap = FALSE
		AngelCouldEscapeNOW = FALSE
		
		AngelInLevel = 0
		
		
		'JUST IN CASE THE ENGINE GET MESSED... That should not happen, but you know... shit happens.
		'--------------------------------------
		DemonInsideTrap = FALSE
		DemonTrying2Escape = FALSE
		
		DemonInLevel = 0



	End If


End Sub







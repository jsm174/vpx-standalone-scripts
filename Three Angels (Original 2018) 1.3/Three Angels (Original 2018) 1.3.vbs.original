			PlaySound "fx_hit_snowball1"
			PlaySound "fx_triggermetal001"
			PlaySound "fx_flame_whoosh"
			PlaySound "fx_rock_move"
			'PlaySound "fx_demonic_whoosh"
			'PlaySound "fx_stomp"
		
		
		Else
		
			PlaySound "fx_air_release2"
			PlaySound "fx_demonic_whoosh"
			PlaySound "fx_flame_whoosh"
			PlaySound "fx_slamshut"
		
		End If

	End If

	'GuardianKickerLight1.FlashForms 1000, 25, GuardianKickerLight1.State
	'GuardianKickerLight2.FlashForms 1000, 25, GuardianKickerLight2.State
	'GuardianKickerLight3.FlashForms 1000, 25, GuardianKickerLight3.State


	FlashForms FlasherUPC, 500, 500, 0



	If GateGuardianRKilled = FALSE Then

		If GateGuardianRInPosition = FALSE and GateGuardianRHasBeenHit = TRUE Then 'The Right Guardian has been hit
		
			FlashForms FlasherGateR, 1100, 50, 0
			FlashForms GuardianRBulb, 1100, 50, 0
			
			RGuardianCreationTimer.UserValue = 100 'That Would return the guardian to his lair
			RGuardianCreationTimer.Interval = 1000
			RGuardianCreationTimer.Enabled = TRUE
		
		End If

	End If


	If GateGuardianLKilled = FALSE Then

		If GateGuardianLInPosition = FALSE and GateGuardianLHasBeenHit = TRUE then
		
			FlashForms FlasherGateL, 1100, 50, 0
			FlashForms GuardianLBulb, 1100, 50, 0
			
			LGuardianCreationTimer.UserValue = 100

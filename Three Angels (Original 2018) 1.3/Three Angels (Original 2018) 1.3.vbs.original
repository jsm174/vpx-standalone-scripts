		If FlashLevelUPC < 0.15 Then
			FlasherlitUPC.visible = 0
		Else
			FlasherlitUPC.visible = 1
		end If

	End If

	' UPR ************************************************************
	If flasherUPR.visible Then FlashLevelUPR = 1

	If FlashLevelUPR <= 0 Then 
		FlashLevelUPR = 0
		FlasherUPRv.visible = 0
		FlasherbaseUPR.BlendDisableLighting = 0		
	Else
		flashx3 = FlashLevelUPR^3
		FlasherUPRv.visible = 1
		FlasherUPRv.opacity = 1000 * flashx3^0.8

		FlasherlightUPR.IntensityScale = flashx3

		matdim = Round(10 * FlashLevelUPR) 
		if matdim = 10 then matdim = 9
		FlasherbaseUPR.BlendDisableLighting = flashx3
		FlasherlitUPR.BlendDisableLighting = 10 * flashx3
		FlasherlitUPR.material = "domelit" & matdim

		FlashLevelUPR = FlashLevelUPR * 0.8 - 0.01
		If FlashLevelUPR < 0.15 Then
			FlasherlitUPR.visible = 0
		Else
			FlasherlitUPR.visible = 1
		end If

	End If



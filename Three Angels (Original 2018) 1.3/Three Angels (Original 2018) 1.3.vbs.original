		Else
			FlasherlitUPL.visible = 1
		end If

	End If

	' UPC ************************************************************
	If flasherUPC.visible Then FlashLevelUPC = 1

	If FlashLevelUPC <= 0 Then 
		FlashLevelUPC = 0
		FlasherUPCv.visible = 0
		FlasherbaseUPC.BlendDisableLighting = 0		
	Else
		flashx3 = FlashLevelUPC^3
		FlasherUPCv.visible = 1
		FlasherUPCv.opacity = 1000 * flashx3^0.8

		FlasherlightUPC.IntensityScale = flashx3

		matdim = Round(10 * FlashLevelUPC) 

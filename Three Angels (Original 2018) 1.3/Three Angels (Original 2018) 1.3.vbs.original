'-----------------------------------------------------------------------------=[ CHRI'S NAILS (AKA BLACK'S NAILS :) ]=-----

Sub ChristNailLTimer_Timer()

	Select Case (ChristNailLTimer.UserValue)

	'==============================================---   
	'  ---===:::[ - A U T O M A T I C - ]:::====---	
	'  ---===:::[   L E F T   N A I L   ]:::====---
	'==============================================---   
	Case 0

			PopupCNailL.isdropped = false
			NailLRaised = TRUE
		
			LeftNailDMDText()
		
		AzarNail = int (rnd*3)
		Select Case (AzarNail)
		Case 0: PlaySound "fx_nail1"
		Case 1: PlaySound "fx_nail2"
		Case 2: PlaySound "fx_nail3"
		End Select
		
		PlaySound "fx_swit3angels\ch_out"
		PlaySound "fx_nail4"
		
		PlaySound "fx_air_release3"
		
			FlashForms FlasherTrapL, 250, 250, 0
		
		FlashForms ChristNailLightL, 750, 50, 1
		FlashForms ChristNailLightAutoL, 750, 50, ChristNailLightAutoL.State
		
		FlashForms LeftLaneBulb1, 750, 25, 1
		FlashForms LeftLaneBulb2, 750, 25, 1
		
		ChristNailLTimer.Interval = 500
		ChristNailLTimer.UserValue = ChristNailLTimer.UserValue + 1

	Case 1

		PlaySound "fx_scrape1"
		
		'-===============-------------   
		'--=[ WIZ MODE ]=-----------------------------------------------
		'-===============-------------   
		If WizModeActive = TRUE then
		
			ChristNailLTimer.Interval = 500
			ChristNailLTimer.UserValue = ChristNailLTimer.UserValue + 1
		
		Else
		
			'------------------------
			' START RECHARGING
			'------------------------
			ChristNailLTimer.Interval = 500
			ChristNailLTimer.UserValue = 14
		
		End If


	'----------------------------------
	Case 2 '-[ DURING WIZ MODE ONLY ]-
	'----------------------------------
		PopupCNailL.isdropped = true
		NailLRaised = FALSE
		
		'We have 2 nails. And if the 2 nails are on we dont want to repeat 2 sounds.
		'So when both nails are on we play only the RIGHT NAIL sound.
		If NailRAvaliable = FALSE then 
		
			'PlaySound "fx_metal_door_huge"
			PlaySound "fx_swit3angels\ch_out"
			PlaySound "fx_triggermetal001"
			'PlaySound "fx_scrape2"
			'PlaySound "fx_metal_scrape"
			
			AzarSoundNailMove()
		
		End If
		
		NailLCharging = FALSE
		
		'ChristNailLightL.FlashForms 1500, 10, 1
		FlashForms ChristNailLightL, 500, 50, 1
		
		ChristNailLTimer.Enabled = FALSE







	'==============================================---   
	'  ---===:::[ LEFT NAIL ACTIVATED ]:::====---
	'==============================================---   
	Case 10

			FlashForms FlasherTrapL, 250, 250, 0
		
		ChristNailLTimer.Interval = 250
		ChristNailLTimer.UserValue = ChristNailLTimer.UserValue + 1

	Case 11

		FlashForms ChristNailLightL, 300, 50, 0
		
		ChristNailLTimer.Interval = 300
		ChristNailLTimer.UserValue = ChristNailLTimer.UserValue + 1

	Case 12

		FlashForms ChristNailLightL, 300, 25, 0
		
		ChristNailLTimer.Interval = 300
		ChristNailLTimer.UserValue = ChristNailLTimer.UserValue + 1

	Case 13

		FlashForms ChristNailLightL,200, 10, 0
		
		'We have 2 nails. And if the 2 nails are on we dont want to repeat 2 sounds.
		'So when both nails are on we play only the RIGHT NAIL sound.
		If NailRAvaliable = FALSE then 
		
			PlaySound "fx_nail0"
		
		End If
		
		ChristNailLTimer.Interval = 200
		ChristNailLTimer.UserValue = ChristNailLTimer.UserValue + 1


	'---------------------------------
	Case 14 ' DOWN + START RECHARGING
	'---------------------------------

		PopupCNailL.isdropped = true
		NailLRaised = FALSE
		
		'We have 2 nails. And if the 2 nails are on we dont want to repeat 2 sounds.
		'So when both nails are on we play only the RIGHT NAIL sound.
		If NailRAvaliable = FALSE then 
		
			'PlaySound "fx_metal_door_huge"
			PlaySound "fx_swit3angels\ch_out"
			PlaySound "fx_triggermetal001"
			'PlaySound "fx_scrape2"
			'PlaySound "fx_metal_scrape"
			
			AzarSoundNailMove()
		
		End If
		
		
		
			'SHOW NO MORE NAILS ON THE DMD
			'-----------------------------
			BoomTimer.Interval = 100
			BoomTimer.Enabled = TRUE
		
		
		If AutomaticNails = TRUE then
		
			ChristNailLightL.State = 1
			
			ChristNailLTimer.Interval = 500
			ChristNailLTimer.UserValue = 18
		
		Else
		
			'------------------------------------
			' =::[ NAIL IS CHARGING ]::=
			'------------------------------------
			NailLCharging = TRUE
			
			ChristNailLightL.BlinkPattern = "10"
			ChristNailLightL.BlinkInterval = 150
			ChristNailLightL.State = 2
			
			ChristNailLTimer.Interval = 5000
			ChristNailLTimer.UserValue = ChristNailLTimer.UserValue + 1
		
		End If

	Case 15

		FlashForms ChristNailLightL, 1000, 50, 1
		
		ChristNailLTimer.Interval = 1000
		ChristNailLTimer.UserValue = ChristNailLTimer.UserValue + 1

	Case 16

		FlashForms ChristNailLightL, 1000, 25, 1
		
		ChristNailLTimer.Interval = 1000
		ChristNailLTimer.UserValue = ChristNailLTimer.UserValue + 1

	'-------------------------------------
	Case 17 '-=::[ NAIL READY AGAIN ]::=-
	'-------------------------------------
	
			NailLCharging = FALSE
		
		FlashForms ChristNailLightL, 1500, 10, 1
		
		ChristNailLTimer.Interval = 1500
		ChristNailLTimer.UserValue = ChristNailLTimer.UserValue + 1


Sub OLDHellDT1R_Hit : StopBallSearchTimer()  '----------------------------------------------------------------------=[ 01 ]=-

	If Locating > 0 or vpTilted = TRUE then 'We are locating the balls
		Exit Sub
	End If

	If WizardMode = -1 then

		HitLuzbelSoft() 'You hit the devil... but very soft :)
		FlashForms HellLight1R, 1000,50, HellLight1R.State
		HellDT1R.IsDropped = False
		Exit Sub

	ElseIf WizardMode = 2 or WizardMode = 3 then

		FlashForms HellLight1R, 1000,50, HellLight1R.State
		HellDT1R.IsDropped = False
		Exit Sub

	ElseIf WizardMode = 666 or WizardMode = 669 then

		HellDT1R.IsDropped = False
		Exit Sub 
	
	End If




	CheckPossesion() 'this will free your soul... if you were possesed

	If ThreeDemonMultiball = -1 or RightDoorMball = -1 or LeftDoorMball = -1 or RightDoorMball = -2 or LeftDoorMball = -2 then 'U R playing a Mball.
		HellDT1R.IsDropped = False
		AddScore(10)
		
		AzarSoundHitMetal()
		Exit Sub
	End If



	If DoorReady = TRUE then 'One of the doors is ready 2 receive an angel
		AddScore(100)
		HellDT1R.IsDropped = False : AzarSoundHitMetal()
		Exit Sub
	End If

	If RightDoorMball = 2 or RightDoorMball = -1 then 'The Mball is ready or u're playing
		AddScore(100)
		HellDT1R.IsDropped = False : AzarSoundHitMetal()
		Exit Sub
	ElseIf LeftDoorMball = 2 or LeftDoorMball = -1 then 'The Mball is ready or u're playing
		AddScore(100)
		HellDT1R.IsDropped = False : AzarSoundHitMetal()
		Exit Sub
	End If


	If DemonOnPlayfield > 0 then 'If there is a demon in the table
		AddScore(100)
		
		HellDT1R.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	End If




	'------------------------------------------------------------------
	'--=[ OPEN RIGHT GATE ]=-----
	'------------------------------------------------------------------

		RightDoorTargetsTimer.UserValue = 0
		RightDoorTargetsTimer.Interval = 250
		RightDoorTargetsTimer.Enabled = TRUE


	If CaptiveBallOn = "L" then 'If the captive ball is on the other Kicker the gate is not accesible

		FlashForms HellLight1R, 500,50, 0
		
		AzarSoundHitMetal()
		Exit Sub

	Else

		FlashForms HellLight1R, 500,50, 0
		'HellDT1R.IsDropped = False

	End If

Exit Sub

	If RightGateOpen = FALSE then

		CheckRightGate()

		FlashForms HellLight1R, 500,50, 1
		FlashForms FlasherUPR, 200, 50, 0
		FlashForms FlasherGateR, 200, 50, 0
		FlashForms GuardianRBulb, 200, 50, 0

	End If

End Sub






'----------------------------------------------------------------------------------------=[ WALLS & STAIRS ]=--

Sub TrapStairDT1_Hit

	'------------------------------------------------------------------
	'--=[ LOCATING BALLS ]=-----
	'------------------------------------------------------------------
	If Locating > 0 then 'We are locating the balls
	
		TrapStairDT1.IsDropped = True : TrapStairDT1.IsDropped = True
		
		AzarSoundHitMetalSoft()
		
		Exit Sub

	End If


	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then

		TrapStairDT1.IsDropped = False
		
		'--------------------------
		' OPENING THAT WOUND
		'--------------------------
		If WizModeOpeningWoundActive = TRUE then
		
			If WMWoundsOpened = 0 or WMWoundsOpened = 1 then
			
				AzarSoundHitChimes()
			
			End If
		
		Else
		
			Azar = int (rnd*2)
			If azar = 0 then
				AzarSoundHitMetalSoft()
			Else
				AzarSoundHitMetalSoft()
				AzarSoundPipe()
			End If
		
		End If
		
		Exit Sub

	End If



	'------------------------------------------------------------------
	'--=[ BLOOD EXTRACTOR MBALL ]=-----
	'------------------------------------------------------------------
	If BloodExtractorMballEnabled = TRUE then

		TrapStairDT1.IsDropped = False
		
		AzarSoundHitBloodyNew()
		
		azar = int (rnd*2)
		If azar = 0 then
			AzarSoundBuble()
		Else
			AzarSoundSlime()
		End If
		
		Exit Sub

	End If



	'------------------------------------------------------------------
	'--=[ MIDNITE MADNESS ]=-----
	'------------------------------------------------------------------
	If MidnightDarknessActive = TRUE then
	
		TrapStairDT1.IsDropped = False
		'AzarSoundHitMetal()
		AzarSoundHitMetalSoft()
		
		Exit Sub 'No need 2 continue

	End If




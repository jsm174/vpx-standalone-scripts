Sub OLDCheckHour()

	If clock < 3 then

		PlaySound "fx_clock1"
		DMD_DisplayScene ""," WELL OF WISHES ", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD2.QueueText " WELL OF WISHES ", seScrollRight, 350
		DMD_DisplayScene "","  STARTS  AT 6  ", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD2.QueueText "  STARTS  AT 6  ", seScrollLeft, 50
		DMD_DisplayScene "","             6  ", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD2.QueueText "             6  ", seBlinkMask, 300

	ElseIf Clock => 3 then '--> 6'0CLOCK  --=[ POWER OF GOD ]=--

		'OpenThePit()

		Clock = 0

	End If

	EXIT SUB


	If clock < 6 then
		DMD_DisplayScene "","  POWER OF GOD  ", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD2.QueueText "  POWER OF GOD  ", seScrollRight, 350 : 'DMDB.QueueText "  POWER OF GOD  ", seScrollRight, 350
		DMD_DisplayScene "","  STARTS  AT 6  ", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD2.QueueText "  STARTS  AT 6  ", seScrollLeft, 50 : 'DMDB.QueueText "  STARTS  AT 6  ", seScrollLeft, 50
		DMD_DisplayScene "","             6  ", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD2.QueueText "             6  ", seBlinkMask, 300 : 'DMDB.QueueText "             6  ", seBlinkMask, 300



	ElseIf Clock = 6 then '--> 6'0CLOCK  --=[ POWER OF GOD ]=--

		ClockTimer.UserValue = 6 
		ClockTimer.Interval = 800: ClockTimer.Enabled = True
		
		If PowerOfGodActive = TRUE then 'If the POG is enabled then
		
			BallSaver30sec()
			DMD_DisplayScene "-GUARDIAN ANGEL-","-E N  A B L E D-", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
			'DMD1.QueueText "-GUARDIAN ANGEL-", seWipeOut, 500 : 'DMDA.QueueText "-GUARDIAN ANGEL-", seWipeOut, 500

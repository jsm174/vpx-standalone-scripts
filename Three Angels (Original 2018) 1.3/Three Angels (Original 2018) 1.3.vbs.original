Sub HellTarget2OriginalPositions() 'This will revert the targets to their original positions


	If HellDT1RHit = 0 then 'The target has NOT been hit
		HellDT1R.IsDropped = False : HellLight1R.State = 1
	Else
		HellDT1R.IsDropped = True : HellLight1R.State = 0
	End If

	If HellDT2RHit = 0 then 'The target has NOT been hit
		HellDT2R.IsDropped = False : HellLight1R.State = 1
	Else
		HellDT2R.IsDropped = True : HellLight1R.State = 0
	End If

	If HellDT3RHit = 0 then 'The target has NOT been hit
		HellDT3R.IsDropped = False : FlashForms HellLight3R, 500, 50, 1
	Else
		HellDT3R.IsDropped = False : HellLight3R.State = 0
	End If

	If HellDT4RHit = 0 then 'The target has NOT been hit
		HellDT4R.IsDropped = False : FlashForms HellLight4R, 500, 50, 1
	Else
		HellDT4R.IsDropped = False : HellLight4R.State = 0
	End If

	If HellDT5RHit = 0 then 'The target has NOT been hit
		HellDT5R.IsDropped = False : FlashForms HellLight5R, 500, 50, 1
	Else
		HellLight5R.State = 0
	End If



	If HellDT1LHit = 0 then 'The target has NOT been hit
		HellDT1L.IsDropped = False : HellLight1L.State = 1
	Else
		HellDT1L.IsDropped = True : HellLight1L.State = 0
	End If

	If HellDT2LHit = 0 then 'The target has NOT been hit
		HellDT2L.IsDropped = False : HellLight2R.State = 1
	Else
		HellDT2L.IsDropped = True : HellLight2R.State = 0
	End If

	If HellDT3LHit = 0 then 'The target has NOT been hit
		HellDT3L.IsDropped = False : FlashForms HellLight3L, 500, 50, 1
	Else
		HellDT3L.IsDropped = False : HellLight3L.State = 0
	End If

	If HellDT4LHit = 0 then 'The target has NOT been hit
		HellDT4L.IsDropped = False : FlashForms HellLight4L, 500, 50, 1
	Else
		HellDT4L.IsDropped = False : HellLight4L.State = 0
	End If

	If HellDT5LHit = 0 then 'The target has NOT been hit
		HellDT5L.IsDropped = False : FlashForms HellLight5L, 500, 50, 1
	Else
		HellLight5L.State = 0
	End If


End Sub



Sub RightDoorTargetsTimer_Timer()

	Exit Sub


	Select Case (RightDoorTargetsTimer.UserValue)
	Case 0

		RightDoorTargetsTimer.UserValue = RightDoorTargetsTimer.UserValue + 1
		RightDoorTargetsTimer.Interval = 250

	Case 1

		If HellDT1R.IsDropped = TRUE then
			FlashForms HellLight1R, 500,50, HellLight1R.State
		End If
		If HellDT2R.IsDropped = TRUE then
			FlashForms HellLight2R, 500,50, HellLight1R.State
		End If
		If HellDT3R.IsDropped = TRUE then
			FlashForms HellLight3R, 500,50, HellLight1R.State
		End If
		If HellDT4R.IsDropped = TRUE then
			FlashForms HellLight4R, 500,50, HellLight1R.State
		End If
		If HellDT5R.IsDropped = TRUE then
			FlashForms HellLight5R, 500,50, HellLight1R.State
		End If
		
		RightDoorTargetsTimer.UserValue = RightDoorTargetsTimer.UserValue + 1
		RightDoorTargetsTimer.Interval = 500

	Case 2

		If HellDT1R.IsDropped = TRUE then
			FlashForms HellLight1R, 500,25, HellLight1R.State
		End If
		If HellDT2R.IsDropped = TRUE then
			FlashForms HellLight2R, 500,25, HellLight1R.State
		End If
		If HellDT3R.IsDropped = TRUE then
			FlashForms HellLight3R, 500,25, HellLight1R.State
		End If
		If HellDT4R.IsDropped = TRUE then
			FlashForms HellLight4R, 500,25, HellLight1R.State
		End If
		If HellDT5R.IsDropped = TRUE then
			FlashForms HellLight5R, 500,25, HellLight1R.State
		End If
		
		HellDT1R.IsDropped = False
		HellDT2R.IsDropped = False
		HellDT3R.IsDropped = False
		HellDT4R.IsDropped = False
		HellDT5R.IsDropped = False 
		

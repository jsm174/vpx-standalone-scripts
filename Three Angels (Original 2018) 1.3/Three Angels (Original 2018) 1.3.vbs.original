Sub CheckGuardianEnergyLites() 'This will syncro and turn'em off/on the correct guardian lites after a Quickshot

	'------------------------------------------------------------------
	'--=[ MIDNITE MADNESS or POSSESION ]=-----
	'------------------------------------------------------------------
	If MidnightDarknessActive = TRUE or DemonTryingToPossesAngel = TRUE then

		GuardianLightL1.State = 0
		GuardianLightL2.State = 0
		GuardianLightL3.State = 0
		
		GuardianLightR1.State = 0
		GuardianLightR2.State = 0
		GuardianLightR3.State = 0
		
		Exit Sub 'During MD or possesing the gates of Hell are opened, so no need to light the guards!

	End If





	'-----------------------------------    
	'-= RIGHT GUARDIAN =-
	'-----------------------------------    
	GuardianLightR1.State = 0
	GuardianLightR2.State = 0
	GuardianLightR3.State = 0


	If GateGuardianRKilled = FALSE then

		Select Case (GateGuardianREnergy)
		Case 30
		
			GuardianLightR1.State = 1
			GuardianLightR2.State = 1
			GuardianLightR3.State = 1
		
		Case 25 
		
			GuardianLightR3.BlinkInterval = 150
			
			GuardianLightR1.State = 1
			GuardianLightR2.State = 1
			GuardianLightR3.State = 2
		
		Case 20 
		
			GuardianLightR1.State = 1
			GuardianLightR2.State = 1
			'GuardianLightR3.State = 1
		
		Case 15 
		
			GuardianLightR2.BlinkInterval = 150
			
			GuardianLightR1.State = 1
			GuardianLightR2.State = 2
			GuardianLightR3.State = 0
		
		Case 10
		
			GuardianLightR1.State = 1
			'GuardianLightR2.State = 1
			'GuardianLightR3.State = 1
		
		Case 5 
		
			GuardianLightR1.BlinkInterval = 150
			
			GuardianLightR1.State = 2
			GuardianLightR2.State = 0

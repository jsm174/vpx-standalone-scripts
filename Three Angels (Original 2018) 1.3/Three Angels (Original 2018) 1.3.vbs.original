Sub UpdateBonusLites()

   BonusX2Light.State = 0
	BonusX3Light.State = 0
	BonusX4Light.State = 0
	BonusX5Light.State = 0
	BonusX7Light.State = 0
	BonusX9Light.State = 0

	BonusHoldLight.State = 0
	BonusXBLight.State = 0
	
	If BonusMultiplier(1) => 2 then
		BonusX2Light.State = 1
		'BonusX2Light.FlashForms 1500, 50, 1
	End If
	If BonusMultiplier(1) => 3 then
		BonusX3Light.State = 1
		'BonusX3Light.FlashForms 1500, 50, 1
	End If
	If BonusMultiplier(1) => 4 then
		BonusX4Light.State = 1
		'BonusX4Light.FlashForms 1500, 50, 1
	End If
	If BonusMultiplier(1) => 5 then
		BonusX5Light.State = 1
		'BonusX5Light.FlashForms 1500, 50, 1
	End If
	If BonusMultiplier(1) => 7 then
		BonusX7Light.State = 1
		'BonusX7Light.FlashForms 1500, 50, 1
	End If
	If BonusMultiplier(1) => 9 then
		BonusX9Light.State = 1
		'BonusX9Light.FlashForms 1500, 50, 1
	End If

	If BonusMultiplier(1) => 10 then
		BonusXBLight.State = 1
		'BonusXBLight.FlashForms 1500, 50, 1
	End If


	If BonusHold > 0 then
		BonusHoldLight.State = 1
	End If

	'If ExtraBallsAwards(1) => 1 then
	'	BonusXBLight.State = 1
	'End If


	' FLASH THE CORRECT ONE
	'-----------------------------
	If BonusMultiplier(1) = 2 then
		FlashForms BonusX2Light, 1500, 50, 1
	End If
	If BonusMultiplier(1) = 3 then
		FlashForms BonusX3Light, 1500, 50, 1
	End If
	If BonusMultiplier(1) = 4 then
		FlashForms BonusX4Light, 1500, 50, 1
	End If
	If BonusMultiplier(1) = 5 then
		FlashForms BonusX5Light, 1500, 50, 1
	End If
	If BonusMultiplier(1) = 7 then
		FlashForms BonusX7Light, 1500, 50, 1
	End If
	If BonusMultiplier(1) = 9 then
		FlashForms BonusX9Light, 1500, 50, 1
	End If

	If BonusMultiplier(1) = 10 then
		FlashForms BonusXBLight, 1500, 50, 1
	End If


End Sub





Sub HellKicker_Hit : StopBallSearchTimer()

	'If fpballid = 666 then
	if activeball.image = "bo" then
	
		HellKickerBallIsADemon = TRUE
	
	Else
	
		HellKickerBallIsADemon = FALSE
	
	End If




	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then

		If	BIHellKicker = TRUE then
		
			Exit Sub 'Ignore the hit
		
		Else
		
			BIHellKicker = TRUE
		
		End If
		
		'---------------------------------
		' :: OPENING WOUNDS ::
		'---------------------------------
		If WizModeOpeningWoundActive = TRUE then
		
			BIHellKicker = TRUE
			
			If WMWoundsOpened => 5 then
			
				WMaWoundHasBeenOpened()
				TeleportBall2LowerPlayFieldFromHellKicker()
				
				Exit Sub
				
				'There is no need. We will do that when we check the aWoundHasBeenOpen subrutine!
				
				'If WMCollectingWoundsBalls = FALSE then 'You hit the kicker after the time was over. So the ball has to be drained.
				'
				'	TeleportBall2LowerPlayFieldFromHellKicker()
				'
				'End If
				
			
			Else 'NOT THE RIGHT TIME?
			
				HellKicker.DestroyBall
				BIHellKicker = FALSE
				
				PlaySound "fx_hit_bloodyn0"
				PlaySound "fx_woosh1"
				
				TeleportBall2LowerPlayFieldFromHellKicker()
				
				Exit Sub
			
			End If
		
		
		'---------------------------------
		' :: FIGHTING EVIL ::
		'---------------------------------
		ElseIf WizModeFightingActive = TRUE then
		
			If HellKickerBallIsADemon = FALSE then
			
				LuzbelHearthHasBeenHit() 'You hit the evil's hearth!
				
				HellKicker.DestroyBall
				BIHellKicker = FALSE
				
				PlaySound "fx_hit_bloodyn0"
				PlaySound "fx_woosh1"
				
				TeleportBall2LowerPlayFieldFromHellKicker()
			
			Else
			
				DemonSoldierDestroyed()
			
			End If
			
		
		End If
		
		Exit Sub

	End If




	'============================================-----------    
	'--=[ MIDNITE MADNESS ]=-----
	'============================================-----------    
	If MidnightDarknessActive = TRUE then

			GatesTimer.Enabled = FALSE 'We raised the posts to trap he ball, and we pop'em down with the Gates Timer. And its not necessary anymore!
			
			MidnightDarknessDemonDestroyed()
			
		
		Exit Sub

	End If



	'============================================-----------    
	'--=[ DEMON POSSESING ANGEL ]=-----
	'============================================-----------    
	IF PossesionTimer.Enabled = TRUE then

			GatesTimer.Enabled = FALSE 'We raised the posts to trap he ball, and we pop'em down with the Gates Timer. And its not necessary anymore!
			'If the Gates r opened and ready to receive an angel they will be opened again once the destruction process has finished.
			
			PossesingDemonExpelled()
		
		Exit Sub

	End If


	'============================================-----------    
	'--=[ ANGEL POSSESED!!! ]=-----
	' !!! DEMON DESTROYED IN THE LAST SEC!!!
	'============================================-----------    
	'Player have been possesed, but manage to send the demon back to hell when the time is over!!!
	
	If AngelHasBeenPoseesed = TRUE then

		AngelHasBeenPoseesed = FALSE
		
		FlippersActive = TRUE 'Flippers were inactive when you were possesed.
		
		PossesionLevel = 0 'Flippers were changed
		
			PossesingDemonExpelled()
			
			GatesTimer.Enabled = FALSE 'We raised the posts to trap he ball, and we pop'em down with the Gates Timer. And its not necessary anymore!
		
		Exit Sub

	End If
	





	'============================================-----------    
	' -=[ HELL GATES OPENED ]=---
	'============================================-----------    
	If GatesOpened = TRUE then 'Angel is going to hell

		HellPopupL1.IsDropped = false 'Posts should be raised
		HellPopupL2.IsDropped = false
		
		HellPopupR1.IsDropped = false
		HellPopupR2.IsDropped = false
		
		'------------------------------------------------------------------
		'--=[ ONE ANGEL IN HELL ]=-----
		'------------------------------------------------------------------
		If HellKickerBallIsADemon = FALSE then
		
			OneAngelHasEnteredInHell()
			
			Exit Sub
		
		End If
		
		
		
		'------------------------------------------------------------------
		'--=[ DEMON BACK TO HELL ]=-----
		'------------------------------------------------------------------
		If HellKickerBallIsADemon = TRUE then
		
				OneDemonHasEnteredInHell()
				'If the gates are opened and you summon a demon the gates kept open.
				'So if you send the demon into the gates the demon goes back to hell... 
			
			Exit Sub
			
		
		End If



	'=================================================-----------    
	' -=[ HELL GATES CLOSED!!!! YOU CHEAT Dr. JONES! ]=---
	'=================================================-----------    
	ElseIf GatesOpened = FALSE then 'You cheat Dr. Jones!

		If HellKickerBallIsADemon = FALSE then
		
			YouCheatDrJonesAngel()
			
			Exit Sub
		
		Else
		
			YouCheatDrJonesDemon()
			
			Exit Sub
		
		End If


	End If



End Sub





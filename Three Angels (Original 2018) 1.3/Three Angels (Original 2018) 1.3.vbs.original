	'			'CreateSoldier() 'Creates a soldier to fight you
	'		
	'		End If
	'		
	'	End If
	'
	'ElseIf WMEvilEnergy < 100 and BootupTimer.Enabled = TRUE then
	'
	'	BootupTimer.Enabled = FALSE 'No more Dark Soldiers when luzbel is going to die!
	'
	'End If



	'=========================-------------------   
	' ADJUSTING BALL RELEASING TIME
	'=========================-------------------   
	' When you Hit LuzBell the ball stays locked for a bit and then it is released
	' When you are playing and Luzbel life decrease, we make that locked time shorter to thrill a bit the gameplay


	'------------------------------------
	' FIVE BALLS
	'------------------------------------
	If WMAngelsOnPF = 5 then

		WMEvilEnergyReleaseTime = 6000

	'------------------------------------
	' FOUR BALLS
	'------------------------------------
	ElseIf WMAngelsOnPF = 4 then

		WMEvilEnergyReleaseTime = 6000


	'------------------------------------
	' THREE BALLS or LESS
	'------------------------------------
	ElseIf WMAngelsOnPF =< 3 then
	
		If WMEvilEnergy <= 900 and WMEvilEnergy > 800 then
		
			WMEvilEnergyReleaseTime = 1000 '(5000 - WMEvilEnergyReleaseTime)
		
		ElseIf WMEvilEnergy <= 800 and WMEvilEnergy > 700 then
		
			WMEvilEnergyReleaseTime = 2000
		
		ElseIf WMEvilEnergy =< 700 and WMEvilEnergy > 600 then
		
			WMEvilEnergyReleaseTime = 2500
		
		ElseIf WMEvilEnergy =< 600 and WMEvilEnergy > 500 then
		
			WMEvilEnergyReleaseTime = 3000
		
		ElseIf WMEvilEnergy =< 500 and WMEvilEnergy > 400 then
		
			WMEvilEnergyReleaseTime = 4000
		
		ElseIf WMEvilEnergy =< 400 and WMEvilEnergy > 300 then
		
			WMEvilEnergyReleaseTime = 4500
		
		ElseIf WMEvilEnergy =< 300 and WMEvilEnergy > 200 then
		
			WMEvilEnergyReleaseTime = 5000
		
		ElseIf WMEvilEnergy =< 200 then
		
			WMEvilEnergyReleaseTime = 5000
		
		End If

	End If




	'=========================-------------------   
	' LUZBEL DIES!!!!
	'=========================-------------------   
	If WMEvilEnergy =< 0 then

		PlaySound "3angels\ch_end"
		
		WMEvilEnergy = 0 'We need to reset this one!
		DMD_CancelRendering
		DMD_DisplayScene "","EVIL LIFE =  0  ", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD2.Text = "EVIL LIFE =  0  "
		'DMDB.Text = "EVIL LIFE =  0  "
		

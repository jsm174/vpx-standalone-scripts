Sub TrapDT3_hit()
	StopBallSearchTimer()

	If Locating > 0 or vpTilted = TRUE then 'We are locating the balls
		Exit Sub
	End If


	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then

		'---------------------------------
		' :: OPENING WOUNDS ::
		'---------------------------------
		If WizModeOpeningWoundActive = TRUE then
		
			TrapDT3.IsDropped = false
			
			FlashForms TrapLight31, 1500,50, TrapLight11.State
			FlashForms TrapLight32, 1000,50, TrapLight12.State
			FlashForms TrapLight33, 500,50 , TrapLight13.State
			
			FlashForms FlasherTrapL, 250, 50, 0
			FlashForms FlasherTrapR, 250, 50, 0
			
			AzarSoundHitMetalSoft()
			'AzarSoundHitGate()
			AzarSoundHitBloodyNew()
			
			Exit Sub 
		
		ElseIf WizModeFightingActive = TRUE then
		
			'-------------------------------------		
			' WOUND HAS BEEN OPENED
			'-------------------------------------
			If WMWoundsOpened => 4 then
			
				TrapDT3.IsDropped = true : TrapDT3.IsDropped = true 'Should not be raised. Bit FP has problems with the pause...
				
				HitLuzbelMed()
			
			Else
			
				HitLuzbelSoft() 'You hit the devil... but very soft :)
				
				TrapDT3.IsDropped = false
				
				FlashForms TrapLight31, 500,50, 0
				FlashForms TrapLight32, 500,50, 0
				FlashForms TrapLight33, 500,50, 0
			
			End If
			
			Exit Sub
		
		End If
		
		Exit Sub

	End If



	'------------------------------------------------------------------
	'--=[ MIDNITE MADNESS ]=-----
	'------------------------------------------------------------------
	If MidnightDarknessActive = TRUE then
	
		TrapDivertersTimer.Interval = 500
		TrapDivertersTimer.Enabled = TRUE 'Just a bit to raise the targets again.
		
		PlaySound "droptargetdropped"
		
		'TrapDT3.IsDropped = false
		
		FlashForms TrapTrigger3Bulb, 1000, 50, TrapTrigger3Bulb.State
		AzarSoundHitMetal()
		
		Exit Sub 'No need 2 continue

	End If


	'------------------------------------------------------------------
	'--=[ DEMON POSSESING ANGEL ]=-----
	'------------------------------------------------------------------
	If PossesionTimer.Enabled = TRUE then

		TrapDivertersTimer.Interval = 500
		TrapDivertersTimer.Enabled = TRUE 'Just a bit to raise the targets again.
		
		PlaySound "droptargetdropped"
		
		'TrapDT3.IsDropped = false
		
		FlashForms TrapTrigger3Bulb, 1000, 50, TrapTrigger3Bulb.State
		AzarSoundHitMetal()
		
		Exit Sub

	End If





	'FlasherTrapL.FlashForMs 200, 50, 0
	'FlasherCentral.FlashForMs 200, 50, 0

	CheckPossesion() 'this will free your soul... if you were possesed




	'---------------------------------------------------
	'--= WE ARE LOOKING FOR A MISSING BALL IN THE TRAP =-----------------------
	'---------------------------------------------------
	If TrapPROBLEMTimer.Enabled = TRUE and TrapPROBLEMTimer.UserValue =>0 then

		TrapDT3.IsDropped = false 'We dont want interferences from outside the trap
		AzarSoundHitMetal()
		
		Exit Sub

	End If


	'--------------------------------
	'--= TRAP IS BEING ACTIVATED =-----------------------
	'--------------------------------
	If TrapIsBeingActivatedNow = TRUE then 'The trap is closing and there is a ball inside the trap So we must released it.
	
		TrapDT3.IsDropped = true
		PlaySound "droptargetdropped"
		
			TrapPROBLEMTimer.UserValue = -45
			TrapPROBLEMTimer.Interval = 500
			TrapPROBLEMTimer.Enabled = TRUE 'This will raise the target again. Just in case there is ball between the target and the diverter
			
			Exit Sub

	End If



	'-------------------------------------
	'--=[ TRAP OPENING/CLOSING ]=-----
	'-------------------------------------
	If TrapTimer.Enabled = TRUE then

		TrapDT3.IsDropped = false
		AzarSoundHitMetal()
		
		Exit Sub 'Better no mess with trap animations

	End If


	'-------------------------------------
	'--=[ TRAP IDENTIFYING A BALL ]=-----
	'-------------------------------------
	If TrapSECEntranceTimer.Enabled = TRUE then

		TrapDT3.IsDropped = false
		AzarSoundHitMetal()
		AzarSoundHitChimes()
		
		Exit Sub 'Ball is in the entrance kicker ready to be trapped

	End If




	'======================================---------------------------    
	'--=[ TRAP OFF ]=-----
	'======================================---------------------------    
	If TrapTurnedON = FALSE then

		AddScore(100)
		
		Select Case (DemonsDestroyed)
		'----------------------------------------------
		Case 0 '--= DEMON DESTROYED = 00 =--
		'----------------------------------------------		
		
			OpenTrapLevel03()
		
		'----------------------------------------------
		Case 1 '--= DEMON DESTROYED = 01 =--
		'----------------------------------------------
		
			FlashForms FlasherTrapL, 200, 50, 0
			FlashForms FlasherTrapR, 200, 50, 0
			
			TrapLV03Hits = TrapLV03Hits + 1
			
			If TrapLV03Hits => 2 then
			
				OpenTrapLevel03()
			
			Else
			
				PlaySound "fx_switch"
				PlaySound "fx_swit3angels\ch_bon"
				PlaySound "fx_swit3angels\ch_out"
				
				SyncroAndUpdateTrapEntranceLites()
				
				TrapDT3Active = TRUE 'Which switch has been hit?
				
				TrapNeedsSeveralHitsToStart = TRUE
				TrapDivertersTimer.Interval = 500
				TrapDivertersTimer.Enabled = TRUE 'Just a bit to raise the target again
			
			End If
		
		'----------------------------------------------
		Case 2 '--= DEMON DESTROYED = 02 =--
		'----------------------------------------------		
		
			FlashForms FlasherTrapL, 200, 50, 0
			FlashForms FlasherTrapR, 200, 50, 0
			
			TrapLV03Hits = TrapLV03Hits + 1
			
			If TrapLV03Hits => 3 then
			
				OpenTrapLevel03()
			
			Else
			
				AzarSoundHitMetal()
				PlaySound "fx_switch"
				'PlaySound "fx_swit3angels\ch_bon"
				PlaySound "fx_swit3angels\ch_out"
				
				SyncroAndUpdateTrapEntranceLites()
				
				TrapDT3Active = TRUE 'Which switch has been hit?
				
				TrapNeedsSeveralHitsToStart = TRUE
				TrapDivertersTimer.Interval = 500
				TrapDivertersTimer.Enabled = TRUE 'Just a bit to raise the target again
			
			End If		
		
		End Select








	'======================================---------------------------    
	'--=[ TRAP ON ]=-----
	'======================================---------------------------    
	ElseIf TrapTurnedON = TRUE then

		'-------------------------------------------		
		'-=[ TRAP ON ]==[ NOTHING INSIDE ]=--------------------
		'-------------------------------------------
		If TrapEmpty = TRUE then
		
			'It's Better to pop down the target and raise it again. The ball could be jammed between the targets and the wall/wire..etc
			'TrapDT3.IsDropped = false
			
			TrapDivertersTimer.Interval = 500
			TrapDivertersTimer.Enabled = TRUE 'Just a bit to raise the targets again.
			
			PlaySound "droptargetdropped"
			'AzarSoundHitMetal()
			AzarSoundHitMetalSoft()
			
			'TrapLight31.FlashForMs 500, 250, 0
			FlashForms TrapTrigger3Bulb, 500, 50, TrapTrigger3Bulb.State
			
			FlashForms FlasherTrapL, 200, 50, 0
			FlashForms FlasherTrapR, 200, 50, 0
			
				Exit Sub 'Trap empty no need to continue
		
		End If
		
		
		
		'================================----------- 
		'-=[ TRAP ON ]==[ DEMON INSIDE ]=--------------------    
		'================================----------- 
		If DemonInsideTrap = TRUE then
		
			If TrapDT1Active = TRUE or TrapDT2Active = TRUE then 'Another switch has been hit. Do nothing or the ball could be lost.
				AzarSoundHitMetal()
				TrapDT3.IsDropped = false
				Exit Sub
			End If
			
			BloodExtractorEntrance.IsDropped = True : BloodExtractorEntrance.IsDropped = True 'Open the ENTRANCE to the trap
			BloodExtractorEntranceWall.isdropped = True
			
				TrapDT3Active = TRUE 'Which switch has been hit?
				
				TrapDivertersTimer.Interval = 500
				TrapDivertersTimer.Enabled = TRUE 'Just a bit to activate the gate.
			
			
			
			FlashForms TrapLight31, 1000, 100, 0
			FlashForms TrapLight32, 1000, 100, 0
			FlashForms TrapLight33, 1000, 100, 0
			
			FlashForms TK3L4, 1000, 100, 1
			FlashForms TK3L3, 1000, 100, 1
			FlashForms TK3L2, 1000, 100, 1
			FlashForms TK3L1, 1000, 100, 1
			
			'------------------------------------          
			'--=[ DEMON IN THiS LEVEL ]=---
			'------------------------------------          
			If DemonInLevel = 3 then
			
				'--------------------------- 
				': SMALL BALLSAVER :-
				'--------------------------- 
				If BallSaverActive = FALSE then 'Ball could be lost before the ball reach the kicker, and everything will get messed
				
					BallSaverActive = TRUE 'Avoid problems calling Mr. BallSaver 
					
					BallSaverTimer.UserValue = 2 'We don't want free time, just avoid missing a ball due to the ramp
					BallSaverTimer.Interval = 4000
					BallSaverTimer.Enabled = TRUE 
				
				End If
				
				FlashForms TrapTrigger3Bulb, 1000, 100, 1
				
				FlashForms SoulTargetL3Light,  500, 50, SoulTargetL3Light.State
				FlashForms SoulTargetL4Light,  500, 50, SoulTargetL4Light.State
				FlashForms SoulTargetR3Light,  500, 50, SoulTargetR3Light.State
				FlashForms SoulTargetR4Light,  500, 50, SoulTargetR4Light.State
				
				FlashForms FlasherTrapL, 1000, 1000, 0
				FlashForms FlasherTrapR, 1000, 1000, 0
				
				ActivateDiverterWithDemonSoundsAndGFX()
			
			
			'------------------------------------          
			'--=[ DEMON **NOT** IN THiS LEVEL ]=---
			'------------------------------------          
			Else
			
				FlashForms TrapTrigger3Bulb, 500, 500, 1
				
				FlashForms FlasherTrapL, 200, 50, 0
				FlashForms FlasherTrapR, 200, 50, 0
				
				ActivateDiverterWithOUTDemonSoundsAndGFX()
			
			End If
			
			
			AddScore(0)
		
		
		
		
		'================================----------- 
		'-=[ TRAP ON ]==[ ANGEL INSIDE ]=--------------------    
		'================================----------- 
		ElseIf AngelInsideTrap = TRUE then
		
				TrapDT3Active = TRUE 'Which switch has been hit?
				
				TrapDivertersTimer.Interval = 500
				TrapDivertersTimer.Enabled = TRUE 'Just a bit to activate the gate.
			
			
			FlashForms TrapTrigger3Bulb, 500, 500, 1
			
			FlashForms TrapLight31, 500, 500, 0
			FlashForms TrapLight32, 500, 500, 0
			FlashForms TrapLight33, 500, 500, 0
			
			FlashForms TK3L4, 500, 500, 1
			FlashForms TK3L3, 500, 500, 1
			FlashForms TK3L2, 500, 500, 1
			FlashForms TK3L1, 500, 500, 1
			
			
			'------------------------------------          
			'--=[ ANGEL IN THiS LEVEL ]=---
			'------------------------------------          
			If AngelInLevel = 3 then
			
				FlashForms SoulTargetL3Light,  500, 50, SoulTargetL3Light.State
				FlashForms SoulTargetL4Light,  500, 50, SoulTargetL4Light.State
				FlashForms SoulTargetR3Light,  500, 50, SoulTargetR3Light.State
				FlashForms SoulTargetR4Light,  500, 50, SoulTargetR4Light.State
				
				PlaySound "fx_cuttingdoor"
				PlaySound "fx_air_release2"
				PlaySound "fx_rock_move"
				
				FlashForms FlasherTrapL, 1000, 1000, 0
				FlashForms FlasherTrapR, 1000, 1000, 0
			
			
			'------------------------------------          
			'--=[ ANGEL **NOT** IN THiS LEVEL ]=---
			'------------------------------------          
			Else
			
				FlashForms FlasherTrapL, 200, 50, 0
				FlashForms FlasherTrapR, 200, 50, 0
				
				PlaySound "fx_motor_drill"
				PlaySound "fx_stomp"
			
			End If
			
		
		
		End If
		

	End If



End Sub








Sub CheckAccessingComments()

	x = 0
	
	If TrapDT1UP.IsDropped = TRUE then
		x = x + 1
	End If
	
	If TrapDT2UP.IsDropped = TRUE then
		x = x + 1
	End If
	
	If TrapDT3UP.IsDropped = TRUE then
		x = x + 1
	End If
	
	Select Case(x)
	Case 1
		PlaySound "vcom_accessing1"
	Case 2
		PlaySound "vcom_accessing2"
	Case 3
		PlaySound "vcom_accessing3"
	End Select
	
End Sub








Sub BoomTimer_Timer()

	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then
		blankvideo()
		BoomBlankDMD()
		BoomTimer.Enabled = FALSE 'No mess with the best
		Exit Sub

	End If



	'------------------------------------------------------------------
	'--=[ COUNTING BONUS ]=-----
	'------------------------------------------------------------------
	If EndOfBallTimer.Enabled = TRUE then

		BoomTimer.Enabled = FALSE 'During Bonus we are using the DMD and we dont want to fade something
		Exit Sub

	End If


	'------------------------------------------------------------------
	'--=[ 2A MBALL ]=-----
	'------------------------------------------------------------------
	If TwoAngelsMballActive = TRUE then

		Boom2AngelsMball()
		
		Exit Sub

	End If



	'------------------------------------------------------------------
	'--=[ DEMON POSSESING ANGEL ]=-----
	'------------------------------------------------------------------
	If PossesionTimer.Enabled = TRUE then

		BoomTimer.Enabled = FALSE 'During possesion we have our personal animations :)
		Exit Sub

	End If




	'------------------------------------------------------------------
	'--=[ MIDNITE MADNESS ACTIVE ]=-----
	'------------------------------------------------------------------
	If MidnightDarknessActive = TRUE then

		BoomDemonBack2Hell()
		'BoomMidnightDarkness()
		
		Exit Sub

	End If



	'------------------------------------------------------------------
	'--=[ DEMON INSIDE THE TRAP ]=-----
	'------------------------------------------------------------------
	If DemonInsideTrap = TRUE then

		Select Case (DemonInLevel)
		Case 1
			BoomDemonTrappedLevel01()
		Case 2
			BoomDemonTrappedLevel02()
		Case 3
			BoomDemonTrappedLevel03()
		End Select
		
		Exit Sub

	End If



	'------------------------------------------------------------------
	'--=[ ANGEL INSIDE THE TRAP ]=-----
	'------------------------------------------------------------------
	If AngelInsideTrap = TRUE then

		Select Case (AngelInLevel)
		Case 1
			BoomAngelTrappedLevel01()
		Case 2
			BoomAngelTrappedLevel02()
		Case 3
			BoomAngelTrappedLevel03()
		End Select
		
		Exit Sub

	End If


	'------------------------------------------------------------------
	'--=[ DEMON ON THE PF ]=-----
	'------------------------------------------------------------------
	If DemonOnPlayfield = TRUE and DemonInsideTrap = FALSE and AngelOnPlayfield = TRUE then

		BoomDemonLiberated() 'If you have a Demon roaring on the playfield
		
		Exit Sub

	End If




	'------------------------------------------------------------------
	'--=[ GATES BROKEN ]=-----
	'------------------------------------------------------------------
	If LeftGateBroken = TRUE and RightGateBroken = TRUE then

		BoomGatesOpened()
		
		Exit Sub

	End If







	'------------------------------------------------------------------
	'--=[ PORTAL READY ]=-----
	'------------------------------------------------------------------
	If PortalReady = TRUE then

		BoomPortalReadyNOW()
		
		Exit Sub

	End If


	'------------------------------------------------------------------
	'--=[ MIDNITE MADNESS READY ]=-----
	'------------------------------------------------------------------
	If MidnightDarknessReady = TRUE then

		'BoomClock1200()
		'
		'Exit Sub

	End If



	blankvideo()
	BoomBlankDMD()

	ImportantDMDMessage = FALSE
		
	''DMDOverlay.FadeOut

	BoomTimer.Enabled = FALSE


End Sub









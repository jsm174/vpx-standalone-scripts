Sub GuardiansLifeTimer_Timer()

	Select Case (GuardiansLifeTimer.UserValue)
	
	'------------------------------------------------------------------
	Case 0 '---=[ BLINKING 100 ]=----
	'------------------------------------------------------------------
		If GateGuardianRKilled = FALSE then
		
			Select Case (GateGuardianREnergy)
			Case 20 : FlashForms GuardianLightR3, 1500, 100, 0
			Case 10 : FlashForms GuardianLightR2, 1500, 100, 0
			Case 00 : 'GuardianLightR1.FlashForms 1500, 100, 0
			End Select
		
		End If
		
		If GateGuardianLKilled = FALSE then
		
			Select Case (GateGuardianLEnergy)
			Case 20 : FlashForms GuardianLightL3, 1500, 100, 0
			Case 10 : FlashForms GuardianLightL2, 1500, 100, 0
			Case 00 : 'GuardianLightL1.FlashForms 1500, 100, 0
			End Select
		
		End If
		
		AzarSoundSlime()
		
		GuardiansLifeTimer.UserValue = GuardiansLifeTimer.UserValue + 1
		GuardiansLifeTimer.Interval = 1500


	'------------------------------------------------------------------
	Case 1 '---=[ BLINKING 050 ]=----
	'------------------------------------------------------------------

		If GateGuardianRKilled = FALSE then
		
			Select Case (GateGuardianREnergy)
			Case 20 : FlashForms GuardianLightR3, 1500, 50, 0
			Case 10 : FlashForms GuardianLightR2, 1500, 50, 0
			Case 00 : 'GuardianLightR1.FlashForms 1500, 50, 0
			End Select
		
		End If
		
		If GateGuardianLKilled = FALSE then
		
			Select Case (GateGuardianLEnergy)
			Case 20 : FlashForms GuardianLightL3, 1500, 50, 0
			Case 10 : FlashForms GuardianLightL2, 1500, 50, 0
			Case 00 : 'GuardianLightL1.FlashForms 1500, 50, 0
			End Select
		
		End If
		
		AzarSoundSlime()
		
		GuardiansLifeTimer.UserValue = GuardiansLifeTimer.UserValue + 1
		GuardiansLifeTimer.Interval = 1500


	'------------------------------------------------------------------
	Case 2 '---=[ BLINKING 025 ]=----
	'------------------------------------------------------------------

		If GateGuardianRKilled = FALSE then
		
			Select Case (GateGuardianREnergy)
			Case 20 :
			
				FlashForms GuardianLightR3, 1500, 25, 0
				
				FlashForms FlasherGateR, 1500, 50, 0
				FlashForms GuardianRBulb, 1500, 50, 0
			
			Case 10 :
			
				FlashForms GuardianLightR2, 1500, 25, 0
				
				FlashForms FlasherGateR, 1500, 50, 0
				FlashForms GuardianRBulb, 1500, 50, 0
			
			Case 00 : 'GuardianLightR1.FlashForms 1500, 25, 0
			
			End Select
		
		End If
		
		If GateGuardianLKilled = FALSE then
		
			Select Case (GateGuardianLEnergy)
			Case 20 :
			
				FlashForms GuardianLightL3, 1500, 25, 0
				
				FlashForms FlasherGateL, 1500, 50, 0
				FlashForms GuardianLBulb, 1500, 50, 0
			
			Case 10 :
			
				FlashForms GuardianLightL2, 1500, 25, 0
				
				FlashForms FlasherGateL, 1500, 50, 0
				FlashForms GuardianRBulb, 1500, 50, 0
			
			Case 00 : 'GuardianLightL1.FlashForms 1500, 25, 0
			
			End Select
		
		End If
		
		AzarSoundSlime()
		
		GuardiansLifeTimer.UserValue = GuardiansLifeTimer.UserValue + 1
		GuardiansLifeTimer.Interval = 1500


	'------------------------------------------------------------------
	Case 3 '---=[ RECOVER LIFE ]=----
	'------------------------------------------------------------------
	
		If GateGuardianRKilled = FALSE then
		
			Select Case (GateGuardianREnergy)
			Case 20 :
			
				FlashForms GuardianLightR3, 1500, 25, 1
				GateGuardianREnergy = 30
				
					FlashForms FlasherGateR, 1500, 1500, 0
					FlashForms GuardianRBulb, 1500, 1500, 0
			
			Case 10
			
				FlashForms GuardianLightR2, 1500, 25, 1
				GateGuardianREnergy = 20
				
					FlashForms FlasherGateR, 1000, 1000, 0
					FlashForms GuardianRBulb, 1000, 1000, 0
			
			Case 00 : 'GuardianLightR1.FlashForms 1500, 25, 1
			
			End Select
		
		End If
		
		If GateGuardianLKilled = FALSE then
		
			Select Case (GateGuardianLEnergy)
			Case 20 :
			
				FlashForms GuardianLightL3, 1500, 25, 1
				GateGuardianLEnergy = 30
				
					FlashForms FlasherGateL, 1500, 1500, 0
					FlashForms GuardianLBulb, 1500, 1500, 0
				
			
			Case 10
			
				FlashForms GuardianLightL2, 1500, 25, 1
				GateGuardianLEnergy = 20
				
					FlashForms FlasherGateL, 1000, 1000, 0
					FlashForms GuardianLBulb, 1000, 1000, 0
			
			Case 00 : 'GuardianLightL1.FlashForms 1500, 25, 1
			
			End Select
		
		End If
		
		
		azar = int (rnd*2)
		If azar = 0 then
			PlaySound "fx_hit_bloody3"
		Else
			PlaySound "fx_hit_bloody5"
		End If
		
		AzarSoundSlime()
		AzarSoundBuble()
		
		
		'The guardians will keep recovering their health until they fill it up!
		If GateGuardianLEnergy => 10 or GateGuardianREnergy => 10 then
		
			GuardiansLifeTimer.UserValue = 0
			GuardiansLifeTimer.Interval = 10000 'was 10K
			GuardiansLifeTimer.Enabled = TRUE
		
		Else
		
			GuardiansLifeTimer.Enabled = FALSE
		
		End If

	End Select




	If GateGuardians = 0 then

		GuardiansLifeTimer.Enabled = FALSE
		Exit Sub

	End If

	If GateGuardianLEnergy = 0 and GateGuardianREnergy = 0 then

		GuardiansLifeTimer.Enabled = FALSE
		Exit Sub

	End If

	If GateGuardianLEnergy => 30 and GateGuardianREnergy => 30 then

		GuardiansLifeTimer.Enabled = FALSE
		Exit Sub

	End If



End Sub



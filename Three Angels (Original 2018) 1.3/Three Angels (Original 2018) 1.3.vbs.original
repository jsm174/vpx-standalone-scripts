Sub CleanModes() 'This will free any locked balls

	'==========================================================------------------    
	'--=[ ANGELS IN HELL ]=-----
	'==========================================================------------------    
	If WizModeIsOver = FALSE then 'During the Wizamode the angels are liberated. So we dont need to recover'em.
	'										 We know that we played the WizMode 'cos WizModeIsOver is TRUE.

		If AngelsInHell => 1 then
		
				BallsOnPlayfield = AngelsInHell
				Locating = Locating + AngelsInHell
			
			'HellDropTarget.IsDropped = False
			HellDropTarget.IsDropped = True
			
		PlaySound SoundFXDOF("droptargetreset", 111, DOFPulse, DOFContactors)
			'PlaySound "diverter"
			PlaySound "fx_gates_close"
			PlaySound "fx_door_open1"
			
			
			
			'If we kept the balls on the pf it will be more real, but they have no real utility until the wiz mode.
			'and they will slow down the FPS on slower computers, so we create them now with the timer.
			
				BootupTimer.UserValue = 666
				BootupTimer.Interval = 500
				BootupTimer.Enabled = TRUE
		
		End If
	
	End If




	'==========================================================------------------    
	' ---==[ S O M E T H I N G   I N S I D E   T H E   T R A P ]=---
	'==========================================================------------------    
	If TrapEmpty = FALSE then 'There is something inside the trap

			BallsOnPlayfield = BallsOnPlayfield + 1
			Locating = Locating + 1 'One more angel to be located
	
	End If

	'------------------------------------     
	'--=[ TRAP - KICKER 001 ]=-----
	'------------------------------------     
	If BITrapKicker1 = TRUE then 'If there is a ball locked in the DEMON MACHINE

		BallsOnPlayfield = BallsOnPlayfield + 1
		Locating = Locating + 1 'One more angel to be located
	
	End If

	'------------------------------------     
	'--=[ TRAP - KICKER 002 ]=-----
	'------------------------------------     
	If BITrapKicker2 = TRUE then

		BallsOnPlayfield = BallsOnPlayfield + 1
		Locating = Locating + 1 'One more angel to be located
	
	End If

	'------------------------------------     
	'--=[ TRAP - KICKER 003 ]=-----
	'------------------------------------     
	If BITrapKicker3 = TRUE then

		BallsOnPlayfield = BallsOnPlayfield + 1
		Locating = Locating + 1 'One more angel to be located

	End If


	'------------------------------------     
	' --=[ OPEN TRAP ]=---
	'------------------------------------     
	If TrapEmpty = FALSE or BITrapKicker1 = TRUE or BITrapKicker2 = TRUE or BITrapKicker3 = TRUE then

		'THIS WILL OPEN THE TRAP 'COS THERE IS A BALL INSIDE
		TrapTimer.UserValue = 1000
		TrapTimer.Interval = 500
		TrapTimer.Enabled = TRUE
		
		'OpenTrapToBeAble2LocateTheBalls() 'We need 2 open the Blood Extractor

	End If








	If Locating > 0 then 'If there is a ball to be located...
	
		'-------------------------------
		' ACCELERATE DRAINING PROCESS
		'-------------------------------
		PopupCNailR.IsDropped = True 'Just in case, for making the draining process faster
		PopupCNailL.IsDropped = True
		
		NailRAvaliable = FALSE 'And we turn'em off
		NailLAvaliable = FALSE
		
		ChristNailLightR.State = 0
		ChristNailLightL.State = 0
		
		UnlimitedNails = FALSE
		UnlimitedPoG = 0
		
		KickbackActive = FALSE
		KickBackLight.State = 0
		KickbackEntrance.IsDropped = False
		
		DMD_CancelRendering
		'DMD1.FlushQueue : 'DMD2.FlushQueue
		DMD_DisplayScene "LOCATING  ANGELS","- PLEASE  WAIT -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD1.QueueText "LOCATING  ANGELS", seWipeOut,  100

		'DMD2.QueueText "- PLEASE  WAIT -", seWipeOut,  100
		
		DMD_DisplayScene "LOCATING  ANGELS","  PLEASE  WAIT  ", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD1.QueueText "LOCATING  ANGELS", seBlinkMask, 1400
		'DMD2.QueueText "  PLEASE  WAIT  ", seBlinkMask, 1400
		
		'DMDA.FlushQueue : 'DMDB.FlushQueue
		'DMDA.QueueText "LOCATING  ANGELS", seWipeOut,  100
		'DMDB.QueueText "- PLEASE  WAIT -", seWipeOut,  100
		'DMDA.QueueText "LOCATING  ANGELS", seBlinkMask, 1400
		'DMDB.QueueText "  PLEASE  WAIT  ", seBlinkMask, 1400
	
	Else 'there is no need to look 4 angels so... let the tale begin!

		AllBallsLocated()
	
	End If


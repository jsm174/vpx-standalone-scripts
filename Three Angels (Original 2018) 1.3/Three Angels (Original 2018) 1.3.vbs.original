'----------------------------------------------------------------------------------------= [ MOVIN' UP ] =--

Sub TrapDivertersTimer_Timer()

	'========================================-------------- 
	'--=[ MIDNIGHT DARKNESS OR POSSESION ]=----------------------------
	'========================================-------------- 
	If MidnightDarknessActive = TRUE or PossesionTimer.Enabled = TRUE then 'We dont want the balls to be stucked

		TrapDT1.IsDropped = false 'There could be that the ball is trapped, between the diverters and the target.
		TrapDT2.IsDropped = false 'or between a wire/wall and the target. So if we pop down the target a sec the
		TrapDT3.IsDropped = false 'ball could be liberated and we dont have to mess with the ball search.
		
		'Player usually hit those targets ALOT so better not the same drill sound...
		'PlaySound "fx_motor_drill2"
		PlaySound SoundFXDOF("droptargetreset", 111, DOFPulse, DOFContactors)
		PlaySound "fx_triggermetal001"
		
		TrapDivertersTimer.Enabled = FALSE
		Exit Sub

	End If



	'========================================-------------- 
	'--=[ 1 OR 2 DEMONS DESTROYED ]=----------------------------
	'========================================-------------- 
	If TrapNeedsSeveralHitsToStart = TRUE then

		If TrapDT1Active = TRUE then
		
			TrapDT1.IsDropped = false
			TrapDT1Active = FALSE
			
			'PlaySound "fx_recharge"
			'PlaySound "fx_swit3angels\ch_out"
			'PlaySound "fx_swit3angels\ch_bon"
			
			Azar = int (rnd*2)
			If azar = 0 then
				PlaySound "fx_air_release3"
			Else
				PlaySound "Fx_air_release5"
			End If
			
			PlaySound SoundFXDOF("droptargetreset", 111, DOFPulse, DOFContactors)
			PlaySound "fx_triggermetal001"
		
		End If
		
		If TrapDT2Active = TRUE then
		
			TrapDT2.IsDropped = false
			TrapDT2Active = FALSE
			
			'PlaySound "fx_recharge"
			'PlaySound "fx_swit3angels\ch_out"
			'PlaySound "fx_swit3angels\ch_bon"
			
			Azar = int (rnd*2)
			If azar = 0 then
				PlaySound "fx_air_release3"
			Else
				PlaySound "Fx_air_release5"
			End If
			
			PlaySound SoundFXDOF("droptargetreset", 111, DOFPulse, DOFContactors)
			PlaySound "fx_triggermetal001"
		
		End If
		
		If TrapDT3Active = TRUE then
		
			TrapDT3.IsDropped = false
			TrapDT3Active = FALSE
			
			'PlaySound "fx_recharge"
			'PlaySound "fx_swit3angels\ch_out"
			'PlaySound "fx_swit3angels\ch_bon"
			
			Azar = int (rnd*2)
			If azar = 0 then
				PlaySound "fx_air_release3"
			Else
				PlaySound "Fx_air_release5"
			End If
			
			PlaySound SoundFXDOF("droptargetreset", 111, DOFPulse, DOFContactors)
			PlaySound "fx_triggermetal001"
		
		End If
		
		
		If TrapDT1Active = FALSE and TrapDT2Active = FALSE and TrapDT3Active = FALSE then
		
			TrapNeedsSeveralHitsToStart = FALSE
		
		End If
		
		TrapDivertersTimer.Enabled = FALSE
		
			Exit Sub

	End If
	


	'========================================-------------- 
	'--=[ TRAP EMPTY ]=----------------------------
	'========================================-------------- 
	If TrapEmpty = TRUE then 'There is nothing inside the trap, not an Angel neither a Demon

		TrapDT1.IsDropped = false 'There could be that the ball is trapped, between the diverters and the target.
		TrapDT2.IsDropped = false 'or between a wire/wall and the target. So if we pop down the target a sec the
		TrapDT3.IsDropped = false 'ball could be liberated and we dont have to mess with the ball search.
		
		'Player usually hit those targets ALOT so better not the same drill sound...
		'PlaySound "fx_motor_drill2"
		PlaySound SoundFXDOF("droptargetreset", 111, DOFPulse, DOFContactors)
		PlaySound "fx_triggermetal001"
		
		TrapDivertersTimer.Enabled = FALSE

	End If






	'===============================---------    
	'====----------------====================----------------------    
	'---=[ DEMON INSIDE ]=-------
	'====----------------====================----------------------    
	'===============================---------    
	If DemonInsideTrap = TRUE then
	
		'--------------------------
		'-=[ SWITCH 001 ]=--
		'--------------------------
		If TrapDT1Active = TRUE then
		
			TrapDT1.IsDropped = false
			
			TrapDiverter1.rotatetostart 'Launch the demon
			
			TrapDivertersFinishTimer.Interval = 300
			TrapDivertersFinishTimer.Enabled = TRUE 'Close the trap again
			
			If DemonInLevel = 1 then 'If the demon is in this level
			
				FlashForMs TrapTrigger1Bulb,  1000, 50, 0
				
				PlaySound "fx_motor_locking"
			
			Else
			
				FlashForMs TrapTrigger1Bulb,  1000, 1000, 0
				
				PlaySound "fx_motor_drill2"
				
				''DMD2.QueueText "  E  M  P  T  Y ", seWipeBarUp, 200
				''DMDB.QueueText "  E  M  P  T  Y ", seWipeBarUp, 200
				
				AddScore(0)
			
			
			End If
			
			
			FlashForMs TK1L1, 1000, 50, 0
			FlashForMs TK1L2, 750, 50, 0
			FlashForMs TK1L3, 500, 50, 0
			FlashForMs TK1L4, 250, 50, 0
			
			FlashForMs TrapLight11,  750, 50, 0
			FlashForMs TrapLight12,  500, 50, 0
			FlashForMs TrapLight13,  250, 50, 0
		
		End If
		
		
		
		'--------------------------
		'-=[ SWITCH 002 ]=--
		'--------------------------
		If TrapDT2Active = TRUE then
		
			TrapDT2.IsDropped = false
			TrapDiverter2.rotatetostart 'Launch the demon
			
			TrapDivertersFinishTimer.Interval = 300
			TrapDivertersFinishTimer.Enabled = TRUE 'Close the trap again
			
			If DemonInLevel = 2 then 'If the demon is in this level
			
				FlashForMs TrapTrigger2Bulb,  1000, 50, 0
				
				PlaySound "fx_motor_locking"
			

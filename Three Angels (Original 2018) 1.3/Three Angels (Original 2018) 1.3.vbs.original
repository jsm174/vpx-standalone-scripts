Sub oldBallsearch()


	If RightDoorMballTimer.Enabled = TRUE or LeftDoorMballTimer.Enabled = TRUE then 'trap being opened or turned ON
		BallSearchTimer.Set TRUE, 15000 
		Exit Sub
	End If


	If TrapTimer.Enabled = TRUE then 'trap being opened or turned ON
		BallSearchTimer.Set TRUE, 15000 
		Exit Sub
	End If


	If PrepareWMTimer.Enabled = TRUE or WMStartTimer.Enabled = TRUE then 'WM intermission modes
		BallSearchTimer.Set TRUE, 15000 
		Exit Sub
	End If

	If WMWinTimer.Enabled = TRUE or HellAttackTimer.Enabled = TRUE then 'WM won.
		BallSearchTimer.Set TRUE, 15000 
		Exit Sub
	End If

	If MisteryTimer.Enabled = TRUE then 'The mistery is active
		BallSearchTimer.Set TRUE, 15000 
		Exit Sub
	End If
	

	If RightFlipperActivated = TRUE or LeftFlipperActivated = TRUE then 'If there is a flipper pressed
		BallSearchTimer.Set TRUE, 15000
		Exit Sub
	End If

	If bBallInPlungerLane = TRUE then 'No ball search when the ball is on the plungerlane
		BallSearchTimer.Set TRUE, 15000
		Exit Sub
	End If

	'Reset the search
	BSBasic = 0 
	BSTrapOFF = 0
	BSRightDoorOFF = 0
	BSLeftDoorOFF = 0
	BSBothDoorsOFF = 0



	If (vpGameInPlay = TRUE) Then
		DMD_CancelRendering
		'DMD1.FlushQueue : 'DMD2.FlushQueue
		'DMDA.FlushQueue : 'DMDB.FlushQueue
		t1 = "- ANGEL   LOST -"
		t2 = "- PLEASE  WAIT -"
		
		'DMD1.QueueText t1 , seWipeOut, 500, 0 , FALSE : 'DMDA.QueueText t1 , seWipeOut, 500, 0 , FALSE
		'DMD2.QueueText t2 , seWipeOut, 500, 0 , FALSE : 'DMDB.QueueText t2 , seWipeOut, 500, 0 , FALSE
		
		
		BSBasic = -1 'Lets star the Basic Search
		'BallSearchTimer2.Set TRUE, 300
		'BallSearchTimer2.UserValue = 0
		
		BallSearchTimer.Enabled = FALSE

	End If


End Sub














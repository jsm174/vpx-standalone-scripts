						'DMDA.FlushQueue : 'DMDB.FlushQueue
						'DMDA.QueueText "-AUTOMATIC NAIL-", seWipeBarDown, 100
						'DMDB.QueueText "-AUTOMATIC NAIL-", seWipeBarUp, 100
						'DMDA.QueueText " AUTOMATIC NAIL ", seBlinkMask, 1000
						'DMDB.QueueText " AUTOMATIC NAIL ", seBlinkMask, 1000
					
					End If
					
					'PlaySound "fx_nail_no"
					'PlaySound "fx_nope"
					
					Exit Sub
				
				End If
				
				
				'----------------------------------
				' -=[ BOTH NAILS RAISED ]=-
				'----------------------------------
				If NailRRaised = TRUE and NailLRaised = TRUE then
				
					Exit Sub 'nothing to do here when both Nails are raised
				
				End If
				
				
				'-----------------------------------
				' -=[ NAILS ARE CHARGING ]=-
				'-----------------------------------
				'-----------------------------
				' **BOTH** NAILS AVAILABLE
				'-----------------------------
				If NailLAvaliable = TRUE and NailRAvaliable = TRUE then
				
					If NailRCharging = TRUE and NailLCharging = TRUE then
					
						NailsChargingSoundsAndDMDMessage()
						Exit Sub
					
					End If
				
				'-----------------------------
				' **LEFT** NAIL AVAILABLE only
				'-----------------------------
				ElseIf (NailLAvaliable = TRUE and NailRAvaliable = FALSE) then
				
					If NailLCharging = TRUE then
					
						NailsChargingSoundsAndDMDMessage()
						Exit Sub
					
					End If
				
				'-----------------------------
				' **RIGHT** NAIL AVAILABLE only
				'-----------------------------
				ElseIf (NailLAvaliable = FALSE and NailRAvaliable = TRUE) then
				
					If NailRCharging = TRUE then
					
						NailsChargingSoundsAndDMDMessage()
						Exit Sub
					
					End If
				
				End If
				
				
				
				'============================-----------   
				' -[ NAIL SOUNDS ]- 2 nails only 1 sound...
				'============================-----------   
				
				'-----------------------------
				' **BOTH** NAILS AVAILABLE
				'-----------------------------
				If NailLAvaliable = TRUE and NailRAvaliable = TRUE then
				
					If NailLRaised = FALSE or NailRRaised = FALSE then
					
						AzarSoundRaiseNail()
					
					End If
				
				'-----------------------------
				' **LEFT** NAIL AVAILABLE only
				'-----------------------------
				ElseIf (NailLAvaliable = TRUE and NailRAvaliable = FALSE) then
				
					If NailLRaised = FALSE then
					
						AzarSoundRaiseNail()
					
					End If
				
				'-----------------------------
				' **RIGHT** NAIL AVAILABLE only
				'-----------------------------
				ElseIf (NailLAvaliable = FALSE and NailRAvaliable = TRUE) then
				
					If NailRRaised = FALSE then
					
						AzarSoundRaiseNail()
					
					End If
				
				End If
				
				
				'============================-----------   
				' -[ LEFT NAIL - AVALIABLE ]-
				'============================-----------   
				If NailLAvaliable = TRUE and NailLCharging = FALSE then
				
					If NailLRaised = FALSE then
					
						If BallLauncFromKickback = FALSE then 'We dont want to activate the nail when the ball is launched from the kickback
						
								FlashForms FlasherTrapL, 250, 50, 0
							
							PopupCNailL.isdropped = false 'Raise the nail
							NailLRaised = TRUE
							
							LeftNailDMDText()
							
							FlashForms ChristNailLightL, 250, 50, 1
							FlashForms ChristNailLightAutoL, 250, 50, ChristNailLightAutoL.State
							
							FlashForms LeftLaneBulb1, 500, 50, 1
							FlashForms LeftLaneBulb2, 500, 50, 1
							
								ChristNailLTimer.UserValue = 10
								ChristNailLTimer.Interval = 250
								ChristNailLTimer.Enabled = TRUE
						
						End If
					
					End If
				
				End If
				
				
				'============================-----------   
				' -[ RIGHT NAIL - AVALIABLE ]-
				'============================-----------   
				If NailRAvaliable = TRUE and NailRCharging = FALSE then
				
					If NailRRaised = FALSE then
					
							FlashForms FlasherSS, 250, 50, 0
						
						PopupCNailR.isdropped = false
						NailRRaised = TRUE
						
						RightNailDMDText()
						
						FlashForms ChristNailLightR, 250, 50, 1
						FlashForms ChristNailLightAutoR, 250, 50, ChristNailLightAutoR.State
						
						FlashForms RightLaneBulb1, 500, 50, 1
						FlashForms RightLaneBulb2, 500, 50, 1
						
							ChristNailRTimer.UserValue = 10
							ChristNailRTimer.Interval = 250
							ChristNailRTimer.Enabled = TRUE
					
					End If
				
				End If
				
				
				
				If NailLAvaliable = TRUE and NailRAvaliable = TRUE then
				
					BoomNailsBoth()
				
				ElseIf NailLAvaliable = TRUE then
				
					BoomNailsLeft()
				
				ElseIf NailRAvaliable = TRUE then
				
					BoomNailsRight()
				
				End If
				
				
				
				

			
			End If



	'====================================---------------------------
	'   K E Y S ---= LEFT FLIPPER ON =---								 	----------------------------------------= [ L FLIPPER ON ]=-----
	'====================================---------------------------

			If (KeyCode = (LeftFlipperKey)) Then
			
				LeftFlipperActivated = TRUE 'LEft Flipper Press
				
				'---------------------------------
				' -=  BOTH FLIPPERS ACTIVATED =-
				'---------------------------------
				If LeftFlipperActivated = TRUE and RightFlipperActivated = TRUE then
				
					BumperPopup.Isdropped = true 'Perhaps the player doesn't want to retain the ball in the bumper area. Yes, but I'm sure that he doesn't know this trick... 
					
					If BonusActive = TRUE and BonusSkipped = FALSE then 'We are counting the bonus
						SkipBonus()
						Exit Sub
					End If
				
				End IF
				
				If FlippersActive = FALSE then
					Exit Sub
				End If
				
				If BonusActive = TRUE then
					Exit Sub
				End If
				
				
				
				'---------------------------------
				' -=  WISH MASTER ACTIVE =-
				'---------------------------------
				If WishMasterActive = TRUE then
				
					PitPriceSelector = PitPriceSelector - 1
					
					If PitPriceSelector =< -1 then
						PitPriceSelector = 12
					End If
					
					ChoosingPitPrice()
					Exit Sub
				
				End If
				
				
				
				'---------------------------------
				' -=  HI SCORES =-
				'---------------------------------
				If bEnteringAHighScore = TRUE then
					Exit Sub
				End If
				
				
				'---------------------------------
				' -=  CONTINUE THE GAME =-
				'---------------------------------
				If ContinueTheGameNow = -1 and LeftFlipperActivated = TRUE and RightFlipperActivated = TRUE then 'If you are in the XBALL BUY IN @ the end of the game... u don't want to buy a ball
				
					PlaySound "fx_knife"
					ContinueTheGameNow = 0 'The time is over
					NoContinuesPlease() 'Go on with the game
					Exit Sub
				
				ElseIf ContinueTheGameNow = -1 then
				
					Exit Sub 'We don't want the flippers to be activated during the xball buy in
				
				End If
				
				
				
				'---------------------------------
				' -=  ACTIVATE FLIPPERS =-
				'---------------------------------
				If PossesionLevel = 0 then '----=[ U R not possesed ]=----
				
					StopBallSearchTimer()
					
					LeftFlipper.RotateToEnd
					LeftFlipperUP.RotateToEnd
					PlaySound  SoundFXDOF("Fx_flipup", 101, DOFOn, DOFFlippers)
					
					
					IF GateGuardians > 0 and GatesOpened = FALSE then
					
						GuardianKickerSelected = GuardianKickerSelected - 1
						
						If GuardianKickerSelected =< 0 then
							GuardianKickerSelected = 3
						End If
						
						CheckGuardianKickerLites()
						
						'rotate the lights
						'TempState = MarkGuardianKickerLight1.State
						'MarkGuardianKickerLight1.State = MarkGuardianKickerLight2.State
						'MarkGuardianKickerLight2.State = MarkGuardianKickerLight3.State
						'MarkGuardianKickerLight3.State = TempState
					
					End If
					
					
					'---------------------------------
					' -=  LANE CHANGE =-
					'---------------------------------
					TempState = LeftOutLaneLight.State
					LeftOutLaneLight.State = LeftInLaneLight.State
					LeftInLaneLight.State = RightInLaneLight.State
					RightInLaneLight.State = RightOutLaneLight.State
					RightOutLaneLight.State = TempState
					
					TempState = Lane1
					Lane1 = Lane2
					Lane2 = Lane3
					Lane3 = Lane4
					Lane4 = TempState
				
				
				
				
				'---------------------------------
				' -=  POSSESION LEVEL 001  =-
				'---------------------------------
				ElseIf PossesionLevel = 1 then '----=[ Same Time azar ]=----
				
					RightFlipper.RotateToEnd : LeftFlipper.rotatetoend 
					RightFlipperUP.RotateToEnd : LeftFlipperUP.rotatetoend 
					
					AzarSoundPossesed()
			        PlaySound  SoundFXDOF("Fx_flipup", 101, DOFOn, DOFFlippers)
					PlaySound  SoundFXDOF("Fx_flipup", 102, DOFOn, DOFFlippers)
				
				
				
				'---------------------------------
				' -=  POSSESION LEVEL 002 =-
				'---------------------------------
				ElseIf PossesionLevel = 2 then '----=[ On and Off changed ]=----
				
					LeftFlipper.RotateToStart
					LeftFlipperUP.RotateToStart
					
					AzarSoundPossesed()
					PlaySound SoundFXDOF("fx_flipperdown", 101, DOFOff, DOFFlippers)
					
				
				
				'---------------------------------
				' -=  POSSESION LEVEL 003  =-
				'---------------------------------
				ElseIf PossesionLevel = 3 then '----=[ Changed all ]=----
				
					RightFlipper.RotateToEnd
					RightFlipperUP.RotateToEnd
					
					AzarSoundPossesed()
						PlaySound  SoundFXDOF("Fx_flipup", 102, DOFOn, DOFFlippers)
					
				
				
				
				'---------------------------------
				' -=  POSSESION LEVEL 004  =-
				'---------------------------------
				ElseIf PossesionLevel = 4 then '----=[ Changed only down ]=----
				
					azar = 0 'int (rnd*2)
					
					If azar = 0 then 'Right is Left but only **Down flippers** changed
					
						RightFlipper.RotateToEnd 'That's Changed
			PlaySound  SoundFXDOF("Fx_flipup", 102, DOFOn, DOFFlippers)
						LeftFlipperUP.RotateToEnd 'That's right
					PlaySound  SoundFXDOF("Fx_flipup", 101, DOFOn, DOFFlippers)
					Else 'Normal
					
						LeftFlipper.RotateToEnd
						LeftFlipperUP.RotateToEnd
										PlaySound  SoundFXDOF("Fx_flipup", 101, DOFOn, DOFFlippers)
					End If
				
				ElseIf PossesionLevel = 4 then '----=[ PLayer doesnt play anymore... is this fun? I donthinkso! ]=----
				
				End If
				
			
			End If





	'====================================---------------------------
	'   K E Y S ---= RIGHT FLIPPER ON =---								 	----------------------------------------= [ R FLIPPER ON ]=-----
	'====================================---------------------------

			If (KeyCode = (RightFlipperKey)) Then
			
				RightFlipperActivated = TRUE 'LEft Flipper Press
				
				'---------------------------------
				' -=  BOTH FLIPPERS ACTIVATED =-
				'---------------------------------
				If LeftFlipperActivated = TRUE and RightFlipperActivated = TRUE then
				
					BumperPopup.IsDropped = true 'Perhaps the player doesn't want to retain the ball in the bumper area. Yes, but I'm sure that he doesn't know this trick... 
					
					If BonusActive = TRUE and BonusSkipped = FALSE then 'We are counting the bonus
						SkipBonus()
						Exit Sub
					End If
				
				End IF
				
				If FlippersActive = FALSE then
					Exit Sub
				End If
				
				If BonusActive = TRUE then
					Exit Sub
				End If
				
				
				
				'---------------------------------
				' -=  WISH MASTER ACTIVE =-
				'---------------------------------
				If WishMasterActive = TRUE then
				
					PitPriceSelector = PitPriceSelector + 1
					
					If PitPriceSelector => 13 then
						PitPriceSelector = 0
					End If
					
					ChoosingPitPrice()
					Exit Sub
				
				End If
				
				
				
				'---------------------------------
				' -=  HI SCORES =-
				'---------------------------------
				If bEnteringAHighScore = TRUE then
					Exit Sub
				End If
				
				
				'---------------------------------
				' -=  CONTINUE THE GAME =-
				'---------------------------------
				If ContinueTheGameNow = -1 and LeftFlipperActivated = TRUE and RightFlipperActivated = TRUE then 'If you are in the XBALL BUY IN @ the end of the game... u don't want to buy a ball
				
					PlaySound "fx_knife"
					ContinueTheGameNow = 0 'The time is over
					NoContinuesPlease() 'Go on with the game
					Exit Sub
				
				ElseIf ContinueTheGameNow = -1 then
				
					Exit Sub 'We don't want the flippers to be activated during the xball buy in
				
				End If
				
				
				
				
				'---------------------------------
				' -=  ACTIVATE FLIPPERS =-
				'---------------------------------
				If PossesionLevel = 0 then '----=[ U R not Possesed ]=----
				
					StopBallSearchTimer()
					
					RightFlipper.RotateToEnd
					RightFlipperUP.RotateToEnd
					
						PlaySound  SoundFXDOF("Fx_flipup", 102, DOFOn, DOFFlippers)
					
					
					IF GateGuardians > 0 and GatesOpened = FALSE then
					
						GuardianKickerSelected = GuardianKickerSelected + 1
						
						If GuardianKickerSelected => 4 then
							GuardianKickerSelected = 1
						End If
						
						CheckGuardianKickerLites()
						
						'rotate the lights
						'TempState = MarkGuardianKickerLight3.State
						'MarkGuardianKickerLight3.State = MarkGuardianKickerLight2.State
						'MarkGuardianKickerLight2.State = MarkGuardianKickerLight1.State
						'MarkGuardianKickerLight1.State = TempState
						
						'TempState = GuardianKickerLight3.State
						'GuardianKickerLight3.State = GuardianKickerLight2.State
						'GuardianKickerLight2.State = GuardianKickerLight1.State
						'GuardianKickerLight1.State = TempState
					
					End If
					
					
					'---------------------------------
					' -=  LANE CHANGE =-
					'---------------------------------
					TempState = RightOutLaneLight.State
					RightOutLaneLight.State = RightInLaneLight.State
					RightInLaneLight.State = LeftInLaneLight.State
					LeftInLaneLight.State = LeftOutLaneLight.State
					LeftOutLaneLight.State = TempState
					
					TempState = Lane4
					Lane4 = Lane3
					Lane3 = Lane2
					Lane2 = Lane1
					Lane1 = TempState
				
				
				
				
				'---------------------------------
				' -=  POSSESION LEVEL 001  =-
				'---------------------------------
				ElseIf PossesionLevel = 1 then '----=[ Same Time azar ]=----
				
					RightFlipper.RotateToEnd : LeftFlipper.RotateToEnd 
					RightFlipperUP.RotateToEnd : LeftFlipperUP.RotateToEnd 
					
					AzarSoundPossesed()
			PlaySound  SoundFXDOF("Fx_flipup", 102, DOFOn, DOFFlippers)
					PlaySound  SoundFXDOF("Fx_flipup", 101, DOFOn, DOFFlippers)
					
				
				
				'---------------------------------
				' -=  POSSESION LEVEL 002  =-
				'---------------------------------
				ElseIf PossesionLevel = 2 then '----=[ On and Off changed ]=----
				
					RightFlipper.RotateToStart
					RightFlipperUP.RotateToStart
					
					AzarSoundPossesed()
					PlaySound SoundFXDOF("fx_flipperdown", 102, DOFOff, DOFFlippers)
					
				
				
				'---------------------------------
				' -=  POSSESION LEVEL 003  =-
				'---------------------------------
				ElseIf PossesionLevel = 3 then '----=[ Changed all ]=----
				
					LeftFlipper.RotateToend
					LeftFlipperUP.RotateToend
					
					AzarSoundPossesed()
				PlaySound  SoundFXDOF("Fx_flipup", 101, DOFOn, DOFFlippers)
					
				
				
				'---------------------------------
				' -=  POSSESION LEVEL 004  =-
				'---------------------------------
				ElseIf PossesionLevel = 4 then '----=[ Changed only down ]=----
				
					azar = 0 'int (rnd*2)
					
					If azar = 0 then 'Right is Left but only **Down flippers** changed
					
						LeftFlipper.RotateToEnd 'That's Changed
						RightFlipperUP.RotateToEnd 'That's right
									PlaySound  SoundFXDOF("Fx_flipup", 101, DOFOn, DOFFlippers)
		PlaySound  SoundFXDOF("Fx_flipup", 102, DOFOn, DOFFlippers)
					Else 'Normal
					
						RightFlipper.RotateToEnd
						RightFlipperUP.RotateToEnd
								PlaySound  SoundFXDOF("Fx_flipup", 102, DOFOn, DOFFlippers)
		PlaySound  SoundFXDOF("Fx_flipup", 102, DOFOn, DOFFlippers)
					End If
				
				ElseIf PossesionLevel = 4 then '----=[ PLayer doesnt play anymore... is this fun? I donthinkso! ]=----
				
				End If
				
			
			End If
			



			'-------------
			' START KEY - GAME IN PLAY = TRUE - ADD ANOTHER PLAYER WHEN GAME ALREADY STARTED
			'-------------
			' Another player starting?  'If (fpGameInPlay = FALSE)
			If (KeyCode = (StartGameKey)) Then
				' must be less than max players and must be on the the very first ball of the game
				
				'If ContinueTheGameNow = -1 and ContinuesInThisGame > 0 then 'If you are in the XBALL BUY IN @ the end of the game..
				
					'Continues = Continues - 1
					'ContinuesInThisGame = ContinuesInThisGame -1
					'
					'PlaySound "vc_amen"
					'
					'ContinueTheGameNow = 0
					'BallsRemaining(1) = BallsRemaining(1) + 1
					'
					'SkillShotActive = TRUE 'SS Ready
					'BallSaverActive = TRUE 'Your Angel Guardian is ready
					'CreateNewBall()
					
					DMD_DisplayScene "BALL = ","" & BallsRemaining(1), UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
					''DMD1.QueueText "BALL = " & BallsRemaining(1), seWipeBarDown, 1000
					
				'	Exit Sub
				
				'End If


				'If ((PlayersPlayingGame < constMaxPlayers) And (bOnTheFirstBall = TRUE)) Then
				'	' free play or credits
				'	If (bFreePlay = TRUE) Then
				'		' add the extra player
				'		PlayersPlayingGame = PlayersPlayingGame + 1
				'		'AddDebugText "Extra Player (Free Play)" & PlayersPlayingGame
				'		' Update the stats
				'		nvTotalGamesPlayed = nvTotalGamesPlayed + 1
				'	Else
				'		If (nvCredits > 0) then
				'			PlayersPlayingGame = PlayersPlayingGame + 1
				'			'AddDebugText "Extra Player (Credits)" & PlayersPlayingGame
				'			' update the stats
				'			nvTotalGamesPlayed = nvTotalGamesPlayed + 1
				'			nvCredits = nvCredits - 1
				'		Else
				'			' Not Enough Credits to start a game.  
				'			' Maybe Play a Sound or put "Insert Coin" on a display
				'		End If
				'	End If
				'End If
			End If
		End If ' If (fpTilted)



	Else 'If (fpGameInPlay = FALSE)
	
	'====================================---------------------------
	'   K E Y S ---= START GAME  =---								 	   ----------------------------------------= [ START GAME ]=-----
	'====================================---------------------------

		' there isn't a game in play (we are in the attract mode)
      ' wait for the start key to be pressed and start a new game
      If (KeyCode = (StartGameKey)) Then
		
'			AddDebugText "+ KEY = START GAME"

			If MachineBootFinished = FALSE then
				Exit Sub 'The pin is bootin' up ... u have to wait a sec
			End If
			
			
			' Free Play Mode ?
			If (bFreePlay = TRUE) Then
				' Yep.  Only allow a game to Start if there are no balls on the playfield.
				' This can happen if the player starts a game too quick after finishing the
				' last game and the machine is ejecting any locked balls.
				If (BallsOnPlayfield = 0) Then
					' A Game is now in progress, reset the table for a new Game
					ResetForNewGame()
				End If
			
			Else
			
				' paying by credits, do we have any ?
				If (nvCredits > 0) Then

					' Yep.  Only allow a game to start if there are no balls on the playfield
					If (BallsOnPlayfield = 0) Then

						' remove a credit
						nvCredits = nvCredits - 1
						' much the same as above
						ResetForNewGame()

	'					AddDebugText "-- CREDITS =" & NVcREDITS

					
					End If
				
				Else
					' Not Enough Credits to start a game.  
					' Maybe Play a Sound or put "Insert Coin" on a display
					DMD_CancelRendering
					'DMD1.FlushQueue : 'DMD2.FlushQueue
					'DMDA.FlushQueue : 'DMDB.FlushQueue
					DMD_DisplayScene "","", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
					'DMD1.QueueText t1, seWipeBarDown, 50 : 'DMDA.QueueText t1, seWipeBarDown, 50
					'DMD1.QueueText t1, seBlinkMask, 1000 : 'DMDA.QueueText t1, seBlinkMask, 1000
					'DMD2.QueueText t1, seWipeBarDown, 50 : 'DMDB.QueueText t1, seWipeBarDown, 50
					'DMD2.QueueText t1, seBlinkMask, 1000 : 'DMDB.QueueText t1, seBlinkMask, 1000
					'DMD1.QueueText "", seNone, 10 : 'DMD2.QueueText "", seNone, 10 
					'DMDA.QueueText "", seNone, 10 : 'DMDB.QueueText "", seNone, 10 
					
					azar = int (rnd*4)
					If azar = 0 then
						PlaySound "fx_growl"
					Else
						PlaySound "fx_motor_drill2"
					End If
				
				End If
			End If
		End If



		' Left Flipper Key Has Been Press, Activate The Left Flipper(s) <--------------------------- [ records?]

		If (KeyCode = (LeftFlipperKey)) and (BallsOnPlayfield = 0) and MachineBootFinished = TRUE Then
		
			dmd = dmd - 1
			
			If dmd =< 0 then
				dmd = 10
			End If
			DMD_CancelRendering
			'DMD1.FlushQueue : 'DMD2.FlushQueue
			'DMDA.FlushQueue : 'DMDB.FlushQueue
			DMDRecords()
		
		ElseIf (KeyCode = (RightFlipperKey)) and (BallsOnPlayfield = 0) and MachineBootFinished = TRUE Then
		
			dmd = dmd + 1
			DMD_CancelRendering
			'DMD1.FlushQueue : 'DMD2.FlushQueue
			'DMDA.FlushQueue : 'DMDB.FlushQueue
			DMDRecords()
		
		End If



	End If ' If (fpGameInPlay)

	If keycode = LeftTiltKey Then
		Nudge 90, 2
		checktilt
	End If
    
	If keycode = RightTiltKey Then
		Nudge 270, 2
		checktilt
	End If
    
	If keycode = CenterTiltKey Then
		Nudge 0, 2
		checktilt
	End If

End Sub


' The User Has Released A Key on the Keyboard..
'
Sub THREEANGELS_KeyUp(ByVal KeyCode)

	'
	' Process any keys which are valid at all times
	'

	'====================================---------------------------
	'   K E Y S ---= PLUNGER PULL =--- 										--------------------------------------= [ PLUNGER RELEASE ]
	'====================================---------------------------

	' The Player has released the Plunger, Let it go..
	If (KeyCode = (PlungerKey)) Then
		PlungerTimer.Enabled = FALSE
		Plunger.Fire
		PlungerForce = 0
		
		PlaySound "PlungerRelease"
	End If

	'
	' Process The Next set of keys depeding of wether there is a game in progress or not
	'

	' Is A Game in Progress?
	If (vpGameInPlay = TRUE) Then
		' and not tilted
		If (vpTilted = FALSE) Then



	'====================================---------------------------
	'   K E Y S ---= LEFT FLIPPER OFF =---								 	----------------------------------------= [ LEFT FLIPPER RELEASED ]=-----
	'====================================---------------------------
		
			If (KeyCode = (LeftFlipperKey)) Then
			
				LeftFlipperActivated = FALSE 'Left Flipper unpress
				
				
				'---------------------------------
				' -= RELEASE FLIPPERS =-
				'---------------------------------
				If PossesionLevel = 0 then
				
					LeftFlipper.RotateToStart
					LeftFlipperUP.RotateToStart
							PlaySound SoundFXDOF("fx_flipperdown", 101, DOFOff, DOFFlippers)
				
				'---------------------------------
				' -=  POSSESION LEVEL 001  =-
				'---------------------------------
				ElseIf PossesionLevel = 1 then 'Same Time azar
				
					RightFlipper.RotateTostart : LeftFlipper.RotateTostart 
					RightFlipperUP.RotateTostart : LeftFlipperUP.RotateTostart
					
					AzarSoundPossesed()
			PlaySound SoundFXDOF("fx_flipperdown", 101, DOFOff, DOFFlippers)
							PlaySound SoundFXDOF("fx_flipperdown", 102, DOFOff, DOFFlippers)
				
				'---------------------------------
				' -=  POSSESION LEVEL 002  =-
				'---------------------------------
				ElseIf PossesionLevel = 2 then 'On and Off changed
				
					LeftFlipper.RotateToEnd
					LeftFlipperUP.RotateToEnd
									PlaySound  SoundFXDOF("Fx_flipup", 101, DOFOn, DOFFlippers)
					AzarSoundPossesed()
					
				
				'---------------------------------
				' -=  POSSESION LEVEL 003  =-
				'---------------------------------
				ElseIf PossesionLevel = 3 then 'Changed all
				
					RightFlipper.RotateToStart
					RightFlipperUP.RotateToStart
					
					AzarSoundPossesed()

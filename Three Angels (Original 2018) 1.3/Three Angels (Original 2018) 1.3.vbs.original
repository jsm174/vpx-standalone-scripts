Sub UpdateTrapEntranceLites()

	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then

		If WizModeOpeningWoundActive = TRUE then
		
			TrapLight1.State = 1
			TrapLight2.State = 1
		
		End If
		
		Exit Sub

	End If



	If TrapTurnedON = TRUE then

		If TrapEmpty = TRUE and TrapReady2Catch = TRUE then
		
			TrapLight1.BlinkInterval = 150
			TrapLight2.BlinkInterval = 150
			
			TrapLight1.BlinkPattern = "10"
			TrapLight2.BlinkPattern = "10"
			
			TrapLight1.State = 2
			TrapLight2.State = 2
		
		Else
		
			TrapLight1.State = 0
			TrapLight2.State = 0
		
		End If

	Else

		TrapLight1.State = 0
		TrapLight2.State = 0

	End If

End Sub




'----=[ BALL ESCAPED FROM THE TRAP WITHOUT PERMISSION ]=----
'=============================================================---------------------
Sub BallHasEscapedFromTrap()

	'There was a ball inside the trap (could be an ANGEL or a DEMON).
	'But the ball has been jammed or went out of the trap. And the trap do not detect it.
	'So we open the trap trying to liberate/unjammed the ball.


	TrapEmpty = TRUE			'And there is nothing inside

	UpdateTrapEntranceLites() 'This will set the lites of the trap according to its state


	'========================------------------------
	' -=[ ANGEL INSIDE TRAP ]=---- 
	'========================------------------------
	If AngelInsideTrap = TRUE then


		'---------------------------------------------------------------------------
		' **01 ANGEL** ON PLAYFIELD 'Sub AngelEscaped()
		'---------------------------------------------------------------------------
		If AngelNeedsToBeRescued = FALSE then
		
			TrapEmpty = TRUE
			
			AngelInsideTrap = FALSE
			AngelOnPlayfield = TRUE
			AngelCouldEscapeNOW = FALSE
			
			AngelInLevel = 0
			UpdateDemonTrapLevelLites()
			
			'We need to reset this or will be a problem with the trap.
			TrapDT1Active = FALSE
			TrapDT2Active = FALSE
			TrapDT3Active = FALSE
			
			
			If DemonOnPlayfield = TRUE then
			
				TrapReady2Catch = TRUE
			
			Else
			
				TrapReady2Catch = FALSE
			
			End If
			
				UpdateTrapEntranceLites() 'This will set the lites of the trap according to its state
		
		
		
		
		'---------------------------------------------------------------------------
		' **02 ANGELS** ON PLAYFIELD -> START THE 2AMBALL!!
		'---------------------------------------------------------------------------
		ElseIf AngelNeedsToBeRescued = TRUE then
		
			'We must start the 2AMball because -in theory- there will be 2 silver balls on the pf.
			'StartThe2AMball()
			
			TwoAngelsMballActive = TRUE
			
			AngelNeedsToBeRescued = FALSE
			
			TrapEmpty = TRUE
			
			AngelInsideTrap = FALSE
			AngelOnPlayfield = TRUE		
			AngelCouldEscapeNOW = FALSE
			
			AngelInLevel = 0
			UpdateDemonTrapLevelLites()
			
			'We need to reset this or will be a problem with the trap.
			TrapDT1Active = FALSE
			TrapDT2Active = FALSE
			TrapDT3Active = FALSE
			
				TrapGoingUpDownTimer.Enabled = FALSE
				TrapHeartTimer.Enabled = FALSE 'heartbeat off
			
			RightDoorLight.State = 0
			LeftDoorLight.State = 0
			
			AnvilTargetR.IsDropped = False
			AnvilTargetL.IsDropped = False
			
			AnvilLightM.BlinkPattern = "10"
			AnvilLightM.BlinkInterval = 150
			AnvilLightM.State = 2
			
			AnvilLightL.BlinkPattern = "10"
			AnvilLightL.BlinkInterval = 150
			AnvilLightL.State = 2
			
			AnvilLightR.BlinkPattern = "10"
			AnvilLightR.BlinkInterval = 150
			AnvilLightR.State = 2
		
		End If
		
		
		
		TrapEmpty = TRUE
		
		AngelInsideTrap = FALSE
		AngelOnPlayfield = TRUE		
		AngelCouldEscapeNOW = FALSE
		
		AngelInLevel = 0
		UpdateDemonTrapLevelLites()
		
		
			BallsOnPlayfield = BallsOnPlayfield + 1 'there is another ball on the PF!
			
			TrapGoingUpDownTimer.Enabled = FALSE
			TrapHeartTimer.Enabled = FALSE 'heartbeat off










	'========================------------------------
	' -=[ DEMON INSIDE TRAP ]=---- 
	'========================------------------------
	ElseIf DemonInsideTrap = TRUE then

		'---------------------------------------------------------------------------
		' 1.- DEMON ALONE
		'---------------------------------------------------------------------------
		If AngelOnPlayfield = FALSE then
		
			'It could be that the trap was holding a demon. Then you lost the angel, so when the demon (that was inside the trap)
			'came back to PF then it will start possesin you!
			
			DemonTryingToPossesAngel = TRUE
			
			DemonStartToPossesAngels()
			
				Exit Sub
		
		
		'---------------------------------------------------------------------------
		' 1.- ANGEL + DEMON  'Sub DemonEscaped()
		'---------------------------------------------------------------------------
		ElseIf AngelOnPlayfield = TRUE then
		
			TrapEmpty = TRUE
			
			TrapReady2Catch = TRUE
			UpdateTrapEntranceLites() 'This will set the lites of the trap according to its state
			
			DemonInsideTrap = FALSE
			DemonOnPlayfield = TRUE
			DemonTrying2Escape = FALSE
			DemonCouldEscapeNOW = FALSE
			
			DemonInLevel = 0 'No demon in any trap level
			UpdateDemonTrapLevelLites() 'Turn on/off lites accordin 2 demon position on trap
			
			BallsOnPlayfield = BallsOnPlayfield + 1 'there is another ball on the PF!
			
			TrapGoingUpDownTimer.Enabled = FALSE
			TrapHeartTimer.Enabled = FALSE 'heartbeat off
		
		
		End If

	End If









		'The DMD was showing Angeltrapped or DemonTrapped!
		BoomTimer.Interval = 500
		BoomTimer.Enabled = TRUE


	StopTracksInSecs = 1000
	StopAllMusicTracks()
	AzarMusic()

End Sub




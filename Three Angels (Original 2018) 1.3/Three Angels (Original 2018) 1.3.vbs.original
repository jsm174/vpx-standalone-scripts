		BallSaverTimer.UserValue = BallSaverTimer.UserValue + 1
		


	'-----------------------------------------------------------
	Case -1 '--=[ 2500 sec ]=--
	'-----------------------------------------------------------

		FlashForms ShootAgainLight1, 1000, 25, 0
		FlashForms ShootAgainLight2, 1000, 25, 0
		
		SoulRingLitesFast()
		
		If PowerOfGodActive = TRUE then 'If the Power of God is on we must blink the lights accordly nato
		
			ShootAgainLight1.BlinkPattern = "10"
			ShootAgainLight2.BlinkPattern = "01"
			
			ShootAgainLight1.BlinkInterval = 150
			ShootAgainLight2.BlinkInterval = 150
			
			ShootAgainLight1.State = 2
			ShootAgainLight2.State = 2
		
		ElseIf PowerOfGodActive = FALSE then
		
			If ExtraBallsAwards(1) => 1 then
			
				FlashForms ShootAgainLight1, 1000, 25, 1
				FlashForms ShootAgainLight2, 1000, 25, 1
			
			End If
		
		End If
		
		
		BallSaverTimer.Interval = 1000
		BallSaverTimer.UserValue = BallSaverTimer.UserValue + 1

	'-----------------------------------------------------------
	Case 0 '--=[ SOUL RING OFF ]=-
	'-----------------------------------------------------------

		LightCorrectSouls() 'This will turn off the "soul ring"
		
		BallSaverTimer.Interval = 1000
		BallSaverTimer.UserValue = BallSaverTimer.UserValue + 1


	'-----------------------------------------------------------
	Case 1 '--=[ MERCY TIME ]=-
	'-----------------------------------------------------------


Sub TrapKicker1_Hit : StopBallSearchTimer() '-----------------------------------------------------=[ KICKER001 ]=--

	'If fpballid = 666 then
	if activeball.image = "bo" then
		TrapKicker1BallIsADemon = TRUE
	Else
		TrapKicker1BallIsADemon = FALSE
	End If


	'---------------------------------------
	'--=[ LOCATING BALLS ]=-----
	'---------------------------------------
	If Locating > 0 then
		TrapDT1UP.IsDropped = TRUE
		TrapKicker1.kick 80, 10
		PlaySound "solenoid"
		Exit Sub
	End If





	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then

			BITrapKicker1 = TRUE
		
		'---------------------------------
		' :: OPENING WOUNDS ::
		'---------------------------------
		If WizModeOpeningWoundActive = TRUE then
		
			If WMWoundsOpened = 1 and WMCollectingWoundsBalls = FALSE then
			
				WMaWoundHasBeenOpened()
				
				TrapDT1UP.IsDropped = false
				TrapDiverter1.rotatetoend 'Close the access
			
			Else
			
				TrapDT1UP.IsDropped = TRUE : TrapDT1UP.IsDropped = TRUE
				
				TrapKicker1.kick 80, 10
				BITrapKicker1 = FALSE
			
			End If
		
		
		'---------------------------------
		' :: FIGHTING EVIL ::
		'---------------------------------
		ElseIf WizModeFightingActive = TRUE then
		
			If TrapKicker1BallIsADemon = TRUE then
			
				BITrapKicker1 = FALSE
				
				TrapDT1UP.IsDropped = TRUE : TrapDT1UP.IsDropped = TRUE
				TrapKicker1.kick 80, 10
				
				'PlaySound "fx_air_gasfire"
				PlaySound "fx_woosh1"
				PlaySound "fx_air_release5"
				PlaySound "solenoid"
			
			Else
			
				LuzbelHasBeenHit()
				
				FlashForms FlasherTrapL, 1000, 50, 0
				FlashForms FlasherTrapR, 1000, 50, 0
				
				TrapDT1UP.IsDropped = false
				PlaySound SoundFXDOF("droptargetreset", 111, DOFPulse, DOFContactors)
				
				
				WMAngelsLocked = WMAngelsLocked + 1 'Another angel has been locked.
				
				'------------------------------
				' RELEASE THE BALL AGAIN
				'------------------------------
				If WMAngelsOnPF = 1 then
				
					BEMBallLock1Timer.Interval = 1000 'WMRelease1
					BEMBallLock1Timer.UserValue = 666
					BEMBallLock1Timer.Enabled = TRUE 'This will release the ball that is in the entrance
				
				Else
				
					If WMAngelsLocked = 3 then
					
						BEMBallLock1Timer.Interval = 1000 'WMRelease1
						BEMBallLock1Timer.UserValue = 666
						BEMBallLock1Timer.Enabled = TRUE 'This will release the ball that is in the entrance
					
					Else
					
						BEMBallLock1Timer.Interval = (5000 - WMEvilEnergyReleaseTime) 'WMRelease1
						BEMBallLock1Timer.UserValue = 666
						BEMBallLock1Timer.Enabled = TRUE 'This will release the ball that is in the entrance
					
					End If
				
				End If
			
			End If
		
		End If
		
		Exit Sub

	End If




	'--------------------------------
	'--= BALL ALREADY ON KICKER =-----------------------
	'--------------------------------
	If BITrapKicker1 = TRUE then 'There is a ball already on that kicker, we ignore the hit and dropped the target

		TrapDT1UP.IsDropped = TRUE
		PlaySound "droptargetdropped"
		
			TrapPROBLEMTimer.UserValue = -50
			TrapPROBLEMTimer.Interval = 500
			TrapPROBLEMTimer.Enabled = TRUE 'This will raise the target again. After the ball went out
			
			Exit Sub

	End If








	'======================================---------------------------    
	'--=[ BLOOD EXTRACTOR MBALL ]=-----
	'======================================---------------------------    
	If BloodExtractorMballEnabled = TRUE then

		'---------------------------------
		'-=: MBALL IS OVER :=-
		'---------------------------------
		If BEMBallsLeftOnPF = 1 then 'If there is only one ball left in the Mball, the mball is over.
		
			BITrapKicker1 = TRUE
			
			BloodExtractorMballOver() 'The mball is over
			Exit Sub
		
		End If
		
		
		'----------------------------------------
		' --=[  BLOOD JACKPOT  ]=--
		'----------------------------------------
		If BITrapKicker1 = FALSE then
		
			TrapDT1UP.IsDropped = false
			
			BITrapKicker1 = TRUE
			BEMBallsLocked = BEMBallsLocked + 1
			
				BEMBallLock1Timer.UserValue = 0
				BEMBallLock1Timer.Enabled = TRUE
				BEMBallLock1Timer.Interval = 15000
			
				'Add more time to the other timers
				BEMBallLock2Timer.Interval = BEMBallLock2Timer.Interval + 7000
				BEMBallLock3Timer.Interval = BEMBallLock3Timer.Interval + 7000
			
			CheckBloodExtractorJackpots() 'Let's see if there is a super jackpot 4 you
			
			'--= LITES ON =-------------------
			'TrapKicker1Bulb.FlashForMs  500, 25, 1
			
			'TK1L4.FlashForMs  500, 25, 1
			'TK1L3.FlashForMs  750, 25, 1
			'TK1L2.FlashForMs 1000, 25, 1
			'TK1L1.FlashForMs 1000, 25, 1
			
			'TrapTrigger1Bulb.FlashForMs 1000, 25, 1
			
			'TrapLight11.FlashForMs 1000, 25, 1
			'TrapLight12.FlashForMs  750, 25, 1
			'TrapLight13.FlashForMs  500, 25, 1
		
		Else
		
			AzarSoundRoar()
		
		End If
		
		Exit Sub

	End If







	'======================================---------------------------    
	'--=[ TRAP OFF ]=-----
	'======================================---------------------------    
	If TrapTurnedON = FALSE then
	
		'-----------------------------
		' BALL IS NOT A DEMON
		'-----------------------------
		If TrapKicker1BallIsADemon = FALSE then
		
			BITrapKicker1 = TRUE 'there is a ball in the kicker
			TrapSwitch = 1 'What switch has been pulsed?
			DMD_CancelRendering
			''DMD1.FlushQueue : 'DMD2.FlushQueue
			DMD_DisplayScene "- POWER HOLE 1 -","-   ACTIVATED  -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
			''DMD1.QueueText "- POWER HOLE 1 -", seWipeBarDown, 1000
			''DMD2.QueueText "-   ACTIVATED  -", seWipeBarUp, 1000
			
			PlaySound "fx_hit_doorslam"
			
				BoomTrapActivated1()
				
				ActivateTrap() 'Prepare the trap
				
				Exit Sub
		
		'-----------------------------
		' BALL IS A DEMON
		'-----------------------------
		ElseIf TrapKicker1BallIsADemon = TRUE then
		
			TrapDT1UP.IsDropped = TRUE : TrapDT1UP.IsDropped = TRUE
			TrapKicker1.kick 80, 10
			
			If MidnightDarknessActive = FALSE and DemonTryingToPossesAngel = FALSE then
				Azar = int (rnd*2)
				If Azar = 0 then
					PlaySound "vcom_rejected"
				Else
					PlaySound "vcom_access_denied"
				End If
			End If
			
			'PlaySound "fx_air_gasfire"
			PlaySound "fx_woosh1"
			PlaySound "fx_air_release5"
			PlaySound "solenoid"
			
			FlashForms TrapKicker1Bulb, 1000, 50, TrapKicker1Bulb.State
			
			FlashForms TK1L4, 1000, 50, TK1L4.State
			FlashForms TK1L3, 1000, 50, TK1L3.State
			FlashForms TK1L2, 1000, 50, TK1L2.State
			FlashForms TK1L1, 1000, 50, TK1L1.State
			
			FlashForms FlasherTrapL, 500, 50, 0
			FlashForms FlasherTrapR, 500, 50, 0
			
			Exit Sub
		
		End If
		
	
	End If


	
	'--------------------------------
	'--= BALL SHOULD NOT BE THERE =-----------------------
	'--------------------------------
	If BITrapKicker1 = FALSE then 'I dunno how the ball gets there. But it shouldnt!

		TrapDT1UP.IsDropped = TRUE
		PlaySound "droptargetdropped"
		
		TrapKicker1.kick 80, 10
		PlaySound "solenoid"
		
		Exit Sub

	End If

End Sub













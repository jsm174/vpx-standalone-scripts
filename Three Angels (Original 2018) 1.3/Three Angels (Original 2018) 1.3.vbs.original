	Case 2 'Open the corridor & reset targets

	   HellDT3R.IsDropped = False
		HellDT4R.IsDropped = False
		
		PlaySound "fx_hit_super"
		
		HellTarget2OriginalPositions() 'This will revert the targets to their original positions
		
		DoorMballOverTimer.UserValue = DoorMballOverTimer.UserValue + 1

	Case 3

		'HellEntranceDT.IsDropped = False 'Close the entrance 2 the Doors of Hell
		
		'HellDiverterL1.SolenoidON : 'HellDiverterR1.SolenoidON 'Close
		
		'Hold the captive ball in its site
		GuardianDiverterR.rotatetostart :	GuardianDiverterL.rotatetostart
		'GuardianDiverterR1.IsDropped = False : GuardianDiverterL1.IsDropped = False
		
		'We must check were the mball were finished.
		
		If DoorMballFinishedIn = "MISTERY" then 'The mball was finished in the mistery kicker
		
			MysteryKicker.DestroyBall
			BallsOnPlayfield = BallsOnPlayfield - 1
		
		ElseIf DoorMballFinishedIn = "DEMONMACHINE" then 'The mball was finished in the demon machine
		
			TrapEntranceKicker.DestroyBall
			BallsOnPlayfield = BallsOnPlayfield - 1
		
		ElseIf DoorMballFinishedIn = "HELL" then
		
			HellKicker.DestroyBall
			BallsOnPlayfield = BallsOnPlayfield - 1
		
		ElseIf DoorMballFinishedIn = "DRAIN" then
		
			' Nothing... that's cool
		
		End If
		
		DoorMballFinishedIn = "YATA"
		
		
		
		If RightDoorMball = 666 and LeftDoorMball = 666 and ThreeDemonMultiball = 666 then 'Let's see if the WM is ready
		
			PrepareWM() 'Prepare the WM
			DoorMballOverTimer.Enabled = FALSE
		
		Else 'ok it's not ready yet...
		
			azar = int(rnd*2)
			If azar = 0 then
				PlaySound "fx_energy1"
			Else
				PlaySound "fx_energy2"
			End If
			
			PlaySound "fx_charge"
			
			KickerQueue = KickerQueue + 1 'We add a ball to the queue just in case 2 balls enter in the kicker
			TrapQueueTimer.Interval = 1500: TrapQueueTimer.Enabled = True 'Just a sec 2 teleport the ball.
			FlashForMS FlasherUPL, 1500, 100, 0
			
			BallsOnPlayfield = BallsOnPlayfield + 1 
			
			DoorMballOverTimer.Enabled = FALSE
			
			AzarMusic()
			
			CreateCaptiveBallInHell() 'We used the CB, so we must create another ball 
			
			If Mistery = -1 then 'The mistery only activate when there is only a ball on the pf
				'MisteryLight1.Set BulbBlink, "10", 150
				'MisteryLight2.Set BulbBlink, "01", 150
			End If
		
		End If

	End Select


End Sub




































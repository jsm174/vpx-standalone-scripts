	'---------------------------------------------------
	If BEMBallsLeftOnPF = 2 then

		azar = int (rnd*2)
		If azar = 0 then
			PlaySound "3angels\ch_9bis1"
		Else
			PlaySound "3angels\ch_9bis2"
		End If
		
		'EffectMusic 1, FadeVolume, 0.7, 8000 'was 5k
		'EffectMusic 2, FadeVolume, 0.0, 1000 'Fade the drums but not suddenly

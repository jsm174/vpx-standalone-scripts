Sub SafeScapeTrigger_Hit : StopBallSearchTimer()

	If Locating > 0 or vpTilted = TRUE then 'We are locating the balls
		Exit Sub
	End If


	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then

		If WizModeOpeningWoundActive = TRUE then
		
			AzarSoundHitChimes()
		
		ElseIf WizModeFightingActive = TRUE then
		
			x = int (rnd*3)
			If x = 0 then
				PlaySound "fx_breath003_3sec"
			ElseIf x = 1 then
				PlaySound "fx_breath004_3sec"
			ElseIf x = 2 then
				PlaySound "fx_breath005_3sec"
			End If
		
		End If
		
		Exit Sub

	End If


	'--------------------------    
	' MIDNIGHT DARKNESS
	'--------------------------    
	If MidnightDarknessActive = TRUE then
		Exit Sub
	End If

	'--------------------------    
	' ANGEL POSSESED
	'--------------------------    
	If AngelHasBeenPoseesed = TRUE then

		PlaySound "vd_blasfemy"
		Exit Sub

	End If


	'------------------------------------------------------------------
	'--=[ DEMON POSSESING ANGEL ]=-----
	'------------------------------------------------------------------
	If PossesionTimer.Enabled = TRUE then 'demonsafefun

			'LET THE DEMON MOVE THOSE FLIPPERS!
			QuickShotTimer.Interval = 100
			QuickShotTimer.UserValue = 750
			QuickShotTimer.Enabled = TRUE
		
		PlaySound "vd_blasfemy"
		Exit Sub

	End If





	AzarSoundThunder()

	IF POGDrainComment = TRUE then 'The PoG has send the ball to the kickback!
	

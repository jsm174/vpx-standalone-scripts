	If Locating > 0 or vpTilted = TRUE then 'We are locating the balls
		Exit Sub
	End If


	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If LocatingWMBalls > 0 then

		HellDT5L.IsDropped = False
		AzarSoundHitMetal()
		
		Exit Sub 'Wiz Mode has been activated throught the WishMaster. And we are collecting the balls.

	End If


	If WizModeActive = TRUE then

		If WizModeOpeningWoundActive = TRUE then
		
			IF WMWoundsOpened => 5 then 
			
				AzarSoundHitMetal()
			
			Else
			
				HellDT5L.IsDropped = False
				
				'HellLight5L.FlashForms 1000, 50, 0
			
			End If
		
		
		ElseIf WizModeFightingActive = TRUE then
		
			HitLuzbelSoft()
		
		End If
		
		Exit Sub

	End If



	'=-----------------------------------
	'-=[ QUICKSHOT ]=-
	'=-----------------------------------
	If QShootTeleportTimer.Enabled = TRUE then

		CheckLSComboPriceHellTargetsLeft()
		
		QShootTeleportTimer.Enabled = FALSE 'We need to stop the timer
		
			Exit Sub 'IMPORTANT!

	End If




	'-----------------------------------
	'--=[ DEMON POSSESING ANGEL ]=-----
	'-----------------------------------
	IF PossesionTimer.Enabled = TRUE then

		HellDT5L.IsDropped = True : HellDT5L.IsDropped = True
		AzarSoundHitMetal()
		Exit Sub 'Targets should be dropped during possesing

	End If


	'-----------------------------------
	' GATES MOVING
	'-----------------------------------
	If GatesTimer.Enabled = TRUE then
		HellDT5L.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	End If

	'-----------------------------------
	' MIDNIGHT DARKNESS
	'-----------------------------------
	If MidnightDarknessActive = TRUE then
		HellDT5L.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	End If

	'-----------------------------------
	' BLOOD EXTRACTOR MBALL
	'-----------------------------------
	If BloodExtractorMballEnabled = TRUE then
		HellDT5L.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	End If

	'-----------------------------------
	' DEMON ON PLAYFIELD
	'-----------------------------------
	If DemonOnPlayfield = TRUE and DemonInsideTrap = FALSE and AngelOnPlayfield = TRUE then
		HellDT5L.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	End If



	'=-----------------------------------
	'-=[ GUARDIANS ]=-
	'=-----------------------------------
	If GateGuardians > 0 then

		BoomGatesProtected()
		
		'HellLight5L.FlashForms 1000, 50, 0
		'AzarSoundHitMetal()
		'AzarSoundHitMonster()
		AzarSoundHitWood()
		AzarSoundGuardianRoar()
		'AzarSoundHitChain()
		
		
		If GateGuardianLKilled = FALSE then
		
			HellDT5L.IsDropped = False
			
			'FlasherGateL.FlashForms 200, 50, 0
			
			CheckGuardianEnergyLites() 'This will syncro and turn'em off/on the correct guardian lites after a Quickshot
			
			'If GateGuardianLEnergy =< 0 then
			'
			'	GuardianLightL1.BlinkInterval = 150 : GuardianLightL1.State = 2
			'	GuardianLightL2.BlinkInterval = 150 : GuardianLightL2.State = 2
			'	GuardianLightL3.BlinkInterval = 150 : GuardianLightL3.State = 2
			'
			'Else
			'
			'	GuardianLightL1.FlashForms 500, 50, 1
			'	GuardianLightL2.FlashForms 500, 50, 1
			'	GuardianLightL3.FlashForms 500, 50, 1
			'
			'End If
		
		End If



	'=-----------------------------------
	'-=[ GATES ]=-
	'=-----------------------------------
	ElseIf GateGuardians = 0 then

		If LeftGateBroken = FALSE then
		
			HellDT5L.IsDropped = False
			FlashForms HellLight5L, 1000, 50, 1
			CheckLeftGate()
		
		End If


Sub TrapDT1UP_Hit : StopBallSearchTimer()

	If Locating > 0 or vpTilted = TRUE then 'We are locating the balls
		Exit Sub
	End If


	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then

		'---------------------------------
		' :: OPENING WOUNDS ::
		'---------------------------------
		If WizModeOpeningWoundActive = TRUE then
		
			'-------------------------------------		
			' WOUND HAS BEEN OPENED
			'-------------------------------------
			If WMWoundsOpened = 1 then 'There r problems with FP and pause :(
			
				TrapDT1UP.IsDropped = true : TrapDT1UP.IsDropped = true
			
			Else
			
				TrapDT1UP.IsDropped = false
			
			End If
			
			FlashForMs FlasherTrapL, 250, 50, 0
			FlashForMs FlasherTrapR, 250, 50, 0
			
			AzarSoundHitMetalSoft()
			'AzarSoundHitGate()
			AzarSoundHitBloodyNew()
			
			azar = int (rnd*2)
			If azar = 0 then
				AzarSoundBuble()
			Else
				AzarSoundSlime()
			End If
		
		
		'---------------------------------
		' :: FIGHTING EVIL ::
		'---------------------------------
		ElseIf WizModeFightingActive = TRUE then

			'-------------------------------------		
			' WOUND HAS BEEN OPENED
			'-------------------------------------
			If WMWoundsOpened => 2 and BITrapKicker1 = FALSE then
			
				TrapDT1UP.IsDropped = TRUE : TrapDT1UP.IsDropped = TRUE
			
			Else
			
				TrapDT1UP.IsDropped = false
			
			End If
			
				HitLuzbelMed()
			
			FlashForMs FlasherTrapL, 250, 50, 0
			FlashForMs FlasherTrapR, 250, 50, 0
			
			AzarSoundHitMetalSoft()
			AzarSoundHitBloodyNew()
		
		End If
		
		Exit Sub

	End If




	'------------------------------------------------------------------
	'--=[ MIDNITE MADNESS ]=-----
	'------------------------------------------------------------------
	If MidnightDarknessActive = TRUE then
	
		TrapDT1UP.IsDropped = false
		'TrapTrigger1Bulb.Flashforms 1000, 50, TrapTrigger1Bulb.State
		AzarSoundHitMetal()
		
		Exit Sub 'No need 2 continue

	End If


	'------------------------------------------------------------------
	'--=[ DEMON POSSESING ANGEL ]=-----
	'------------------------------------------------------------------
	If PossesionTimer.Enabled = TRUE then

		TrapDT1UP.IsDropped = false
		AzarSoundHitMetal()
		
		Exit Sub

	End If










	'======================================---------------------------    
	'--=[ BLOOD EXTRACTOR MBALL ]=-----
	'======================================---------------------------    
	If BloodExtractorMballEnabled = TRUE then

		'---------------------------------
		'-=: BALL IN KICKER :=-
		'---------------------------------
		If BITrapKicker1 = TRUE then
		
			TrapDT1UP.IsDropped = false
			'TrapTrigger1Bulb.Flashforms 1000, 50, TrapTrigger1Bulb.State
			AzarSoundHitMetal()
			AzarSoundHitBloodyNew()
		
		Else
		
			AzarSoundHitGate()
			'AzarSoundHitMetal()
			AzarSoundHitBloodyNew()
			
			PlaySound "fx_chan003"
		
		End If
		
		FlashForMs FlasherTrapL, 250, 50, 0
		FlashForMs FlasherTrapR, 250, 50, 0
		
		Exit Sub 'No need 2 continue
	
	End If





	'--------------------------------
	'--= TRAP IS BEING ACTIVATED =-----------------------
	'--------------------------------
	If TrapIsBeingActivatedNow = TRUE then 'The trap is closing and there is a ball inside the trap So we must released it.

		PROBLEMBallInsideWhenClosingTrap = TRUE
		
		TrapDT1UP.IsDropped = TRUE
		PlaySound "droptargetdropped"
		
		TrapPROBLEMTimer.UserValue = -50
		TrapPROBLEMTimer.Interval = 500
		TrapPROBLEMTimer.Enabled = TRUE 'This will raise the target again. Just in case there is ball lend over the target
		
		
			TrapTimer.Interval = TrapTimer.Interval + 1500 'We need to give more time 2 the timer until the ball is out
			
			TrapInPositionToEjectTheIntruder()
			Exit Sub
		
		Exit Sub

	End If



	'-------------------------------------
	'--=[ TRAP MOVING ]=-----
	'-------------------------------------
	If TrapTimer.Enabled = TRUE then

		TrapDT1UP.IsDropped = false
		AzarSoundHitMetal()
		
		Exit Sub 'Better no mess with trap animations

	End If







	'======================================---------------------------    
	'--=[ TRAP OFF ]=-----
	'======================================---------------------------    
	If TrapTurnedON = FALSE Then

		If BITrapKicker1 = TRUE then 'There could be a ball already on that kicker (ie: 2 time you activate the trap)
		
			TrapDT1UP.IsDropped = false
			AzarSoundHitMetal()
			
			FlashForMs TK1L4, 1000, 50, TK1L4.State
			FlashForMs TK1L3, 1000, 50, TK1L3.State
			FlashForMs TK1L2, 1000, 50, TK1L2.State
			FlashForMs TK1L1, 1000, 50, TK1L1.State
			
			FlashForMs FlasherTrapL, 500, 50, 0
			FlashForMs FlasherTrapR, 500, 50, 0
			
			Azar = int (rnd*2)
			If Azar = 0 then
				PlaySound "vcom_rejected"
			Else
				PlaySound "vcom_access_denied"
			End If
			
			Exit Sub
		
		End If
		
		
		PlaySound "vcom_acc1ready"
		
		'CheckAccessingComments()
		
		'Azar = int (rnd*2)
		'If azar = 0 then
		'	PlaySound "vcom_access_denied"
		'Else
		'	PlaySound "vcom_rejected"
		'End If
		
		PlaySound "fx_switch"
		PlaySound "fx_swit3angels\ch_out"
		
		Azar = int (rnd*2)
		If azar = 0 then
			PlaySound "fx_machinestart"
		Else
			PlaySound "fx_motor_start2"
		End If
		
		FlashForMs TrapTrigger1Bulb, 1000, 50, 1
		FlashForMs TrapKicker1Bulb, 1000, 50, 1
		
		FlashForMs TK1L1, 1500, 25, 1
		FlashForMs TK1L2, 1000, 25, 1
		FlashForMs TK1L3, 500, 25, 1
		FlashForMs TK1L4, 500, 25, 1
		
		FlashForMs FlasherTrapL, 1500, 1500, 0
		FlashForMs FlasherTrapR, 1500, 1500, 0
		
		SyncroTrapLites() 'This will syncronize all lites on trap to make'em look better
		
		BoomTrapPoweringTurnON1()
		
		DMD_CancelRendering
		'DMD1.FlushQueue : 'DMD2.FlushQueue
		DMD_DisplayScene "-- DEMON TRAP --","- ACCESS READY -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD1.QueueText "-- DEMON TRAP --", seWipeBarUp, 100
		'DMD2.QueueText "- ACCESS READY -", seWipeBarDown, 100
		DMD_DisplayScene "-- DEMON TRAP --","  ACCESS READY  ", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD1.QueueText "-- DEMON TRAP --", seNone, 900
		'DMD2.QueueText "  ACCESS READY  ", seBlinkMask, 900
		
		'DMDA.FlushQueue : 'DMDB.FlushQueue
		'DMDA.QueueText "-- DEMON TRAP --", seWipeBarUp, 100
		'DMDB.QueueText "- ACCESS READY -", seWipeBarDown, 100
		'DMDA.QueueText "-- DEMON TRAP --", seNone, 900
		'DMDB.QueueText "  ACCESS READY  ", seBlinkMask, 900
		
		AddScore(250)
		
		'TrapTimer.UserValue = 700
		'TrapTimer.Interval = 1000
		'TrapTimer.Enabled = TRUE 'Computer Voice

	Else

		TrapDT1UP.IsDropped = false
		AzarSoundHitMetal()

	End If




End Sub










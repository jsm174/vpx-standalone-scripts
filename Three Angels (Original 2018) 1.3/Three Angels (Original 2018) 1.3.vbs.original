Sub BootupTimer_Timer()

	Select Case (BootupTimer.UserValue)

	'===========================----------          
	'-=   BOOT UP SEQUENCE  =------
	'===========================----------          
		Case 0 'Pause
		
			BootupTimer.UserValue = BootupTimer.UserValue + 1
		
		Case 1 ' General illumination bulbs light on.
		
			'LightSeqTilt.Play SeqAllON	'Turn ON all the lights :)
			
			BootUpLightsON()
			
			BootupTimer.Interval = 750
			BootupTimer.UserValue = BootupTimer.UserValue + 1
		
		Case 2 ' 1 sec.  delay
		
			BootupTimer.UserValue = BootupTimer.UserValue + 1
		
		Case 3 ' "Dunng" sound
		
			PlaySound "fx_sys11_bootup" 'Thanx Centinex!!
			
			BootupTimer.Interval = 1000
			BootupTimer.UserValue = BootupTimer.UserValue + 1
		
		Case 4
		
			'LightSeqTilt.StopPlay
			'BootUpLightsON()
			
			PinOn()
			
			BootupTimer.Enabled = FALSE





	
	
	
	
	'==========================================----------          
	'-= POWER OF GOD REACTIVATION DURING REGULAR PLAY =------
	'==========================================----------          
		Case 100 'RestPOG
		
			ActivatePOG()
			
			BootupTimer.Enabled = FALSE
		
		
	

	'==========================================----------          
	'-= EXTRA ANGEL SMALL ANIMATION =------
	'==========================================----------          
		Case 200
		
				ResetBallSearch() 'We need to reset the ballsearch
			
			'Just in case we were using them
			'----------------------------------
			LightSeqTilt.StopPlay
			LightSeqDW.StopPlay
			
			
			ShowXBallDMDText() 'XB Gas Display Animation
			
			PlaySound "fx_chan_xball" '6 seconds until
			
				LightSeqTilt.UpdateInterval = 80
				LightSeqTilt.Play SeqUpOn, 100
			
			BootupTimer.Interval = 6000
			BootupTimer.UserValue = BootupTimer.UserValue + 1
		
		Case 201
		
				BoomXball()
				
				ExtraBallsAwards(1) = ExtraBallsAwards(1) + 1
				
				If PowerOfGodActive = FALSE then
				
					ShootAgainLight1.State = 1
					ShootAgainLight2.State = 1
				
				End If
			
			DMD_CancelRendering
			'DMD1.FlushQueue : 'DMD2.FlushQueue
			DMD_DisplayScene "- EXTRA  ANGEL -","- EXTRA  ANGEL -", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
			'DMD1.QueueText "- EXTRA  ANGEL -", seNone, 200
			'DMD2.QueueText "- EXTRA  ANGEL -", seNone, 200
			DMD_DisplayScene "  EXTRA  ANGEL  ","  EXTRA  ANGEL  ", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
			'DMD1.QueueText "  EXTRA  ANGEL  ", seBlinkMask, 1300
			'DMD2.QueueText "  EXTRA  ANGEL  ", seBlinkMask, 1300
			
			'DMDA.FlushQueue : 'DMDA.FlushQueue
			'DMDA.QueueText "- EXTRA  ANGEL -", seNone, 200
			'DMDB.QueueText "- EXTRA  ANGEL -", seNone, 200
			'DMDA.QueueText "  EXTRA  ANGEL  ", seBlinkMask, 1300
			'DMDB.QueueText "  EXTRA  ANGEL  ", seBlinkMask, 1300
			
			'PlaySound "vc_gifted_man"
			'PlaySound "vc_xball2receive"
			PlaySound "vd_ur_the_chosen"
			
			LightSeqTilt.StopPlay
			LightSeqTilt.Play SeqAllON
			
			FlashForms FlasherUPR, 4000, 4000, 0
			FlashForms FlasherUPC, 4000, 4000, 0
			FlashForms FlasherUPL, 4000, 4000, 0
			FlashForms FlasherGateR, 4000, 4000, 0
			FlashForms FlasherGateL, 4000, 4000, 0
			
			FlashForms FlasherTrapL, 4000, 4000, 0
			FlashForms FlasherTrapR, 4000, 4000, 0
			FlashForms FlasherCentral, 4000, 4000, 0
			FlashForms FlasherSS, 4000, 4000, 0
			
			BootupTimer.Interval = 4000
			BootupTimer.UserValue = BootupTimer.UserValue + 1
		
		Case 202
		
			LightSeqTilt.StopPlay
			
			BootupTimer.Interval = 1000
			BootupTimer.UserValue = BootupTimer.UserValue + 1
		
		Case 203
		
				ResetBallSearch() 'We need to reset the ballsearch
			
			BootupTimer.Enabled = FALSE




	'==========================================----------          
	'-= 100 SOULS SMALL ANIMATION =------
	'==========================================----------          

Sub AnvilTargetL_Hit

	If Locating > 0 or vpTilted = TRUE then 'We are locating the balls
		Exit Sub
	End If


	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If WizModeActive = TRUE then

		PlaySound "droptargetdropped"
		Exit Sub

	End If


	'--------------------------    
	' BLOOD EXTRACTOR - COLLECTING
	'--------------------------    
	If DemonInTheBloodExtractor = TRUE or AngelInTheBloodExtractor = TRUE then 

		AnvilTargetL.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub 'Ball needs to be drained

	End If


	'------------------------------------------------------------------
	'--=[ MIDNITE MADNESS ]=-----
	'------------------------------------------------------------------
	If MidnightDarknessActive = TRUE then

		AnvilTargetL.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	
	End If

	'------------------------------------------------------------------
	'--=[ DEMON POSSESING ANGEL ]=-----
	'------------------------------------------------------------------
	IF PossesionTimer.Enabled = TRUE then

		AnvilTargetL.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	
	End If

	If DemonOnPlayfield = TRUE and DemonInsideTrap = FALSE and AngelOnPlayfield = TRUE then
		AnvilTargetL.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	End If

	'--------------------------------------
	'--=[ DEMON TRYING TO ESCAPE ]=-----
	'--------------------------------------
	If DemonInsideTrap = TRUE and DemonTrying2Escape = TRUE then
		AnvilTargetL.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	End If

	'--------------------------------------
	'--=[ ANGEL TRYING TO ESCAPE ]=-----
	'--------------------------------------
	If AngelInsideTrap = TRUE then
		AnvilTargetL.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	End If



	'===========================-----------    
	'--=[ 2A MBALL ]=-----
	'===========================-----------    
	If TwoAngelsMballActive = TRUE then

		FlashForms FlasherGateL, 500, 50, 0
		FlashForms AnvilLightL, 1000, 25, 0
		
		PlaySound "fx_blacksmith_hit"
		'PlaySound "fx_hit_double"
		PlaySound "fx_hit_train"
		'PlaySound "fx_ini2"
		PlaySound "fx_air_release4"
		
		AzarSoundHitChain()
		
		BlackSmithTrapBall()
		
		Exit Sub

	End If


	'------------------------------------------------------------------
	'--=[ GATES MOVING ]=-----
	'------------------------------------------------------------------
	If GatesTimer.Enabled = TRUE then
		AnvilTargetL.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub 'No mess when Doors r opening or closing
	End If


	'------------------------------------------------------------------
	'--=[ GATES OPENED ]=-----
	'------------------------------------------------------------------
	If GatesOpened = TRUE then
		AnvilTargetL.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	End If


	'------------------------------------------------------------------
	'--=[ BLOOD EXTRACTOR MBALL ]=-----
	'------------------------------------------------------------------
	If BloodExtractorMballEnabled = TRUE then
		AnvilTargetL.IsDropped = False
		AzarSoundHitMetal()
		Exit Sub
	End If








	'===========================-----------    
	'--=[ BLACKSMITH ]=-----
	'===========================-----------    
	If BlackSmithEntranceReady = FALSE then

		FlashForms FlasherGateL, 500, 50, 0
		FlashForms AnvilLightL, 1000, 25, 0
		
		PlaySound "fx_blacksmith_hit"
		'PlaySound "fx_hit_double"
		'PlaySound "fx_hit_train"
		PlaySound "fx_swit3angels\ch_out"
		'PlaySound "fx_ini2"
		PlaySound "fx_air_release4"
		'PlaySound "fx_air_release"
		'PlaySound "fx_stomp"
		
		AzarSoundHitChain()
		
		CheckBothAnvilTargets()



	ElseIf BlackSmithEntranceReady = TRUE then

		BlackSmithTrapBall()


	Else

		AnvilTargetR.IsDropped = False
		AzarSoundHitMetal()

	End If


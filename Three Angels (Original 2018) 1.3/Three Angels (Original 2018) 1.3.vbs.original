Sub CheckDoubleLock() 'This will check if two balls have been locked at the same time 'gus

	azar = int(rnd*2)
	If azar = 0 then
		PlaySound "fx_energy1"
	Else
		PlaySound "fx_energy2"		
	End If



	If DemonsDestroyed = 2 then 'There is only one lock left... so no problem here

		ActivateTrap() 'Way to go!





	ElseIf DemonsDestroyed = 1 then 'There is one ball already locked

		If TrapChargeLevel = 2 then 'OK!
		
			ActivateTrap() 		
		
		ElseIF TrapChargeLevel = 3 then ' 3 balls locked - WRONG
		
			If BITrapKicker1 = TRUE then
			
				TrapKicker2.kick 80, 10 : PlaySound "Solenoid"
				
				TrapSecureLockTimer.Interval = 500:TrapSecureLockTimer.Enabled = True 'We need a sec before raising the DT or ball wont' go out
				'ActivateTrap() 
				Exit Sub
			
			ElseIf BITrapKicker2 = TRUE then
			
				TrapKicker1.kick 80, 10 : PlaySound "Solenoid"
				
				TrapSecureLockTimer.Interval = 500:TrapSecureLockTimer.Enabled = True 'We need a sec before raising the DT or ball wont' go out
				'ActivateTrap() 
				Exit Sub
			
			ElseIf BITrapKicker3 = TRUE then
			
				TrapKicker2.kick 80, 10 : PlaySound "Solenoid"
				
				TrapSecureLockTimer.Interval = 500:TrapSecureLockTimer.Enabled = True 'We need a sec before raising the DT or ball wont' go out
				'ActivateTrap() 
				Exit Sub
			
			End If
		
		End If





	ElseIf DemonsDestroyed = 0 then '----= [ No balls locked yet ]=---

		If TrapChargeLevel = 1 then 'Only 1 balls locked - OK!
		
			ActivateTrap()
		
		ElseIF TrapChargeLevel = 2 then ' 2 balls locked - WRONG
		
			If BITrapKicker1 = TRUE then
			
				TrapKicker2.kick 80, 10 : PlaySound "Solenoid"
				TrapKicker3.kick 80, 10
				
				TrapSecureLockTimer.Interval = 500:TrapSecureLockTimer.Enabled = True 'We need a sec before raising the DT or ball wont' go out
				'ActivateTrap() 
				Exit Sub
			
			ElseIf BITrapKicker2 = TRUE then
			
				TrapKicker1.kick 80, 10 : PlaySound "Solenoid"
				TrapKicker3.kick 80, 10
				
				TrapSecureLockTimer.Interval = 500:TrapSecureLockTimer.Enabled = True 'We need a sec before raising the DT or ball wont' go out
				'ActivateTrap() 
				Exit Sub
			
			ElseIf BITrapKicker3 = TRUE then
			
				TrapKicker1.kick 80, 10 : PlaySound "Solenoid"
				TrapKicker2.kick 80, 10
				
				TrapSecureLockTimer.Interval = 500:TrapSecureLockTimer.Enabled = True 'We need a sec before raising the DT or ball wont' go out
				'ActivateTrap() 
				Exit Sub
			
			End If
		
		End If

	End If

	

'==============================================--------------------

Sub BlackSmithEntranceTrigger_Hit : StopBallSearchTimer()

	If Locating > 0 or vpTilted = TRUE then 'We are locating the balls

		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		Exit Sub 'No need 2 continue

	End If


	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If LocatingWMBalls > 0 then

		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		Azar = int (rnd*2)
		If azar = 0 then
			PlaySound "fx_pipe02"
		Else
			PlaySound "fx_pipe03"
		End If
		
		Exit Sub 'Wiz Mode has been activated throught the WishMaster. And we are collecting the balls.

	End If


	If WizModeActive = TRUE then

		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		If WizModeOpeningWoundActive = TRUE then
		
			Azar = int (rnd*2)
			If azar = 0 then
				PlaySound "fx_pipe02"
			Else
				PlaySound "fx_pipe03"
			End If
		
		Else
		
			AzarSoundSlime()
			HitLuzbelSoft()
		
		End If
		
		
		Exit Sub 'No need to continue

	End If




	'--------------------------    
	' BLOOD EXTRACTOR - COLLECTING
	'--------------------------    
	If DemonInTheBloodExtractor = TRUE or AngelInTheBloodExtractor = TRUE then 

		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		Exit Sub 'Ball needs to be drained

	End If



	'--------------------------    
	' ANGEL POSSESED
	'--------------------------    
	If AngelHasBeenPoseesed = TRUE then

		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		Exit Sub 'No need 2 continue

	End If



	FlashForms AnvilLightM, 500, 50, AnvilLightM.State

	FlashForms LeftSlingshotUPBulb1, 500, 50, LeftSlingshotUPBulb1.State
	FlashForms RightSlingshotUPBulb1, 500, 50, RightSlingshotUPBulb1.State


	'--------------------------------    
	'--=[ BLOOD EXTRACTOR MBALL ]=-----
	'--------------------------------    
	If BloodExtractorMballEnabled = TRUE then

		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		Exit Sub 'No need 2 continue

	End If



	'------------------------------------------------------------------
	'--=[ MIDNITE MADNESS ]=-----
	'------------------------------------------------------------------
	If MidnightDarknessActive = TRUE then

		Azar = int (rnd*2)
		If azar = 0 then
			PlaySound "fx_pipe02"
		Else
			PlaySound "fx_pipe03"
		End If
		
		'Durin MD we *DONT* have to stop the ball
		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		Exit Sub 'No need 2 continue

	End If


	'------------------------------------------------------------------
	'--=[ DEMON ON PF ]=-----
	'------------------------------------------------------------------
	If DemonOnPlayfield = TRUE and DemonInsideTrap = FALSE and AngelOnPlayfield = TRUE then

		Azar = int (rnd*2)
		If azar = 0 then
			AzarSoundGhostWhispers()
			PlaySound "fx_pipe02"
		Else
			AzarSoundGhostVoices()
			PlaySound "fx_pipe03"
		End If
		
		AzarSoundThunder()
		
		'Durin MD we *DONT* have to stop the ball
		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		FlashForms FlasherTrapR, 500, 500, 0
		FlashForms FlasherCentral, 500, 500, 0
		
		Exit Sub 'No need 2 continue

	End If



	'------------------------------------------------------------------
	'--=[ DEMON POSSESING ANGEL ]=-----
	'------------------------------------------------------------------
	If PossesionTimer.Enabled = TRUE then

		Azar = int (rnd*2)
		If azar = 0 then
			AzarSoundGhostWhispers()
			PlaySound "fx_pipe02"
		Else
			AzarSoundGhostVoices()
			PlaySound "fx_pipe03"
		End If
		
		
		'Durin MD we *DONT* have to stop the ball
		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		Exit Sub 'No need 2 continue

	End If


	'--------------------------------------
	'--=[ DEMON TRYING TO ESCAPE ]=-----
	'--------------------------------------
	If DemonInsideTrap = TRUE and DemonTrying2Escape = TRUE then

		Azar = int (rnd*2)
		If azar = 0 then
			PlaySound "fx_pipe02"
		Else
			PlaySound "fx_pipe03"
		End If
		
		'Durin MD we *DONT* have to stop the ball
		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		FlashForms FlasherTrapR, 500, 500, 0
		FlashForms FlasherCentral, 500, 500, 0
		
		Exit Sub 'No need 2 continue

	End If

	'--------------------------------------
	'--=[ ANGEL TRYING TO ESCAPE ]=-----
	'--------------------------------------
	If AngelInsideTrap = TRUE then

		Azar = int (rnd*2)
		If azar = 0 then
			PlaySound "fx_pipe02"
		Else
			PlaySound "fx_pipe03"
		End If
		
		'Durin MD we *DONT* have to stop the ball
		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		FlashForms FlasherTrapR, 500, 500, 0
		FlashForms FlasherCentral, 500, 500, 0
		
		Exit Sub 'No need 2 continue

	End IF


	'------------------------------------------------------------------
	'--=[ SAVING AN ANGEL ]=-----
	'------------------------------------------------------------------
	If AngelNeedsToBeRescued = TRUE then
	
		Azar = int (rnd*2)
		If azar = 0 then
			PlaySound "fx_pipe02"
		Else
			PlaySound "fx_pipe03"
		End If
		
		'Durin MD we *DONT* have to stop the ball
		BlackSmithPostL.isdropped=true
		BlackSmithPostR.isdropped=true
		
		FlashForms FlasherTrapR, 500, 500, 0
		FlashForms FlasherCentral, 500, 500, 0
		
		Exit Sub 'No need 2 continue

	End If






	'====================================----------- 
	'---=[ GATES ANIMATION ]=---
	'====================================----------- 
	If GatesTimer.Enabled = TRUE then

		'------------------
		' RAISING GATES
		'------------------
		If GatesTimer.UserValue => 50 and GatesTimer.UserValue =< 68 then
		
			GatesTimer.Enabled = FALSE
			RaiseGatesInSilent() 'This will raise the gates avoiding messing with bonus count or display
		
		End If
		
		'------------------
		' OPENING GATES
		'------------------
		If GatesTimer.UserValue => 100 and GatesTimer.UserValue =< 111 then
		
			GatesTimer.Enabled = FALSE
			OpenGatesInSilent() 'This will open the gates avoiding messing with bonus count or display
		
		End If

	
	End If






	'===========================-----------    
	'--=[ 2A MBALL ]=-----
	'===========================-----------    
	If TwoAngelsMballActive = TRUE then

		PlaySound "fx_hit_super"
		
		'We have to stop the balls
		BlackSmithPostL.isdropped=false
		BlackSmithPostR.isdropped=false
		
		FlashForms FlasherTrapR, 1000, 50, 0
		FlashForms FlasherCentral, 1000, 50, 0
		
		Exit Sub

	End If






	'===========================-----------    
	'--=[ BLACKSMITH ]=-----
	'===========================-----------    
	
		BoomTimer.Enabled = FALSE 'No need to disconnect the DMD now...
		BoomBlackSmith()

	Azar = int (rnd*2)
	If azar = 0 then
		PlaySound "fx_ramp_1"
	Else

Sub SubDMDLevel()

	If Right(PossesionForceDMD,1) = "d" then

		df2()
		PossesionForceDMD = PossesionForceDMD + "c"

	ElseIf Right(PossesionForceDMD,1) = "c" then

		df2()
		PossesionForceDMD = PossesionForceDMD + "b"

	ElseIf Right(PossesionForceDMD,1) = "b" then

		df3()
		PossesionForceDMD = PossesionForceDMD + "d"

	End If

	DMD_CancelRendering
	'DMD1.FlushQueue : 'DMD2.FlushQueue
	'DMDA.FlushQueue : 'DMDB.FlushQueue
	DMD_DisplayScene "--DEMON INSIDE--",""& PossesionForceDMD, UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None

Sub PortalTimer_Timer()

	Select Case (PortalTimer.UserValue)

	'====================================---------------------------      
	' -=[ THE PORTAL WILL CLOSE IF ANGEL DONT PUMP IT ]=---
	'====================================---------------------------      
	Case 0

		If PortalReady = TRUE then
		
			PortalTimer.Enabled = FALSE
			
			Exit Sub 'When the portal is opened. It wont close again!
		
		End If
		
		
		If PortalPower =< 0 then
		
			PortalTimer.Enabled = FALSE
			
			LightSpinner1.State = 0 : LightSpinner2.State = 0
			LightSpinner3.State = 0 : LightSpinner4.State = 0
			LightSpinner5.State = 0 : LightSpinner6.State = 0
			LightSpinner7.State = 0 : LightSpinner8.State = 0
			LightSpinner9.State = 0 : LightSpinner10.State = 0
			
			Exit Sub
		
		ElseIf PortalPower => 20 then
		
			PortalTimer.Enabled = FALSE 'When POrtalPower=20 the music has been changed... and its almost ready!
			
			Exit Sub
		
		End If
		
		PortalPower = int(PortalPower)
		PortalPower = PortalPower - 1
		
		'CheckPortal()
		Select Case (PortalPower)
		
		Case 2
		
			FlashForms LightSpinner1, 1000, 25, 0
			LightSpinner2.State = 0
		
		Case 4
		
			FlashForms LightSpinner2, 1000, 25, 0
			LightSpinner3.State = 0
			
			PortalLight1R.State = 0
			PortalLight1L.State = 0
		
		Case 6
		
			FlashForms LightSpinner3, 1000, 25, 0
			LightSpinner4.State = 0
		
		Case 8
		
			FlashForms LightSpinner4, 1000, 25, 0
			LightSpinner5.State = 0
		
		Case 10
		
			FlashForms LightSpinner5, 1000, 25, 0
			LightSpinner6.State = 0
		
		Case 12
		
			FlashForms LightSpinner6, 1000, 25, 0
			LightSpinner7.State = 0
			
			PortalLight2R.State = 0
			PortalLight2L.State = 0
		
		Case 14
		
			FlashForms LightSpinner7, 1000, 25, 0
			LightSpinner8.State = 0
		
		Case 16
		
			FlashForms LightSpinner8, 1000, 25, 0
			LightSpinner9.State = 0
			
			PortalLight3R.State = 0
			PortalLight3L.State = 0
		
		Case 18
		
			FlashForms LightSpinner9, 1000, 25, 0
		
		End Select
		
		
		'THE INTERVAL IS SET DEPENDING ON THE DEMON...
		'PortalTimer.Interval = 3000
		PortalTimer.Enabled = TRUE














	'====================================---------------------------      
	' -=[   BLOOD EXTRACTOR MULTIBALL HELP   ]=---
	'---------------------------------------------------------------
	' DURING THE B.EX.MBALL BALL WILL BE KEEPED IN THE PORTAL KICKER
	'     FOR A WHILE TO HELP THE PLAYER MAKING THE JACKPOTS
	'====================================---------------------------      
	Case 100

		FlashForms RampLight3, 1000, 100, 0
		FlashForms RampLight2, 1000, 100, 0
		FlashForms RampLight1, 1000, 100, 0
		
		PortalTimer.Interval = 1000
		PortalTimer.UserValue = PortalTimer.UserValue + 1

	Case 101

		FlashForms RampLight3, 1000, 50, 0
		FlashForms RampLight2, 1000, 50, 0
		'RampLight1.FlashForms 1000, 50, 0
		
		PortalTimer.Interval = 1000
		PortalTimer.UserValue = PortalTimer.UserValue + 1

	Case 102

			FlashForms FlasherCentral, 1000, 50, 0
		
		FlashForms RampLight3, 1000, 25, 0
		'RampLight2.FlashForms 1000, 25, 0
		'RampLight1.FlashForms 1000, 25, 0
		
		PlaySound "fx_ice_cracking"
		
		PortalTimer.Interval = 1000
		PortalTimer.UserValue = PortalTimer.UserValue + 1

	Case 103

			FlashForms FlasherCentral, 500, 25, 0
			FlashForms FlasherSS, 500, 25, 0
		
		FlashForms PortalBulb2, 500, 25, 0
		FlashForms PortalBulb1, 500, 25, 0
		
		GZPopupR1.IsDropped =  true
		GZPopupR2.IsDropped =  true
		GZPopupL1.IsDropped =  true
		GZPopupL2.IsDropped =  true
		
		PortalKicker.kick 270, 10
		BIPortalKicker = FALSE
		
		PlaySound "fx_hit_bloodyn0"
		PlaySound "fx_woosh1"
		
		PlaySound "fx_air_release3"
		
		PortalTimer.Enabled = FALSE











	'====================---    
	'======================== ===============================------------------------------------
	'	--=[ WIZARD MODE ]=---    ---=[ WOUND OPEN 004 ]=----    
	'======================== ===============================------------------------------------
	'====================---    
	Case 670 'WMRelease5

		'If WishMasterTimer.Enabled = FALSE then 'We use this when Angel or Luzbel has been hit. We dont want to mix voices!
		If WizModeFightingActive = FALSE then
			PlaySound "fx_invocation5"
		End If
		
		PortalTimer.Interval = 3000
		PortalTimer.UserValue = PortalTimer.UserValue + 1

	Case 671

		If	BIPortalKicker = TRUE then
		
			If WMCollectingWoundsBalls = TRUE then ' ALL WOUNDS HAVE BEEN OPENED OR TIME'S OVER
				DisplayCollectingBallMessage() 'Easy down the players
			End If
			
			GZPopupR1.IsDropped =  true 'Just in case
			GZPopupR2.IsDropped =  true
			
			GZPopupL1.IsDropped =  true
			GZPopupL2.IsDropped =  true
		
		End If
		
		PortalTimer.Interval = 200
		PortalTimer.UserValue = PortalTimer.UserValue + 1

	Case 672

			AzarSoundDemonDie()
			PlaySound "fx_hit_launch"
		
			PortalKicker.kick 270, 10
			BIPortalKicker = FALSE
			
			WMAngelsLocked = WMAngelsLocked - 1 'Another angel has been released
		
		'PlaySound "droptargetdropped"
		PlaySound "fx_air_release5"
		
		PortalTimer.Enabled = FALSE


	End Select

End Sub



Sub SummonDemonTimer_Timer()

	Select Case (SummonDemonTimer.UserValue)

	'--------------------------   
	'-====================================================-------------   
	Case -50	'--=[ 2A MULTIBALL 2xJACKPOT COUNT DOWN ]=-------------------------------------------
	'-====================================================-------------   
	'--------------------------   
		'We run out of objects, so we have to "reuse" the other timers. '2AcountDown
		'We use this one for the DOUBLE JACKPOT count down during the 2ANGELS MBALL
		
		SummonDemonTimer.UserValue = SummonDemonTimer.UserValue + 1
		SummonDemonTimer.Interval = 75
		SummonDemonTimer.Enabled = TRUE '2AcountDown

	Case -49
	
		ClockMSec = ClockMSec - 8
		
		If ClockMSec =< 15 then
		
			ClockSec = ClockSec - 1
			ClockMSec = 99 
		
		End If
		
		If ClockSec = 0 then
		
			ClockMin = ClockMin - 1
			ClockSec = 59
			
		End If
		
		DMD_DisplayScene "-- 2X JACKPOT --","", UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
		'DMD1.Text = "-- 2X JACKPOT --"
		'MD2.Text   "  01 = 00 = 00  "
		
		'===========================------------ 
		'--=[ DMD CLOCK ]=---
		'===========================------------ 
		If ClockSec <10 then	
			DMD_DisplayScene "0","="& ClockMin & ClockSec & ClockMSec, UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
			'DMD2.Text   = "0" & ClockMin & "=" & "0" & ClockSec & "=" & ClockMSec
			'DMDB.Text   = "0" & ClockMin & "=" & "0" & ClockSec & "=" & ClockMSec
		
		Else
			DMD_DisplayScene "0","="& ClockMin & ClockSec & ClockMSec, UltraDMD_Animation_None, UltraDMD_deOn, UltraDMD_Animation_None
			'DMD2.Text   = "0" & ClockMin & "=" & ClockSec & "=" & ClockMSec
			'DMDB.Text   = "0" & ClockMin & "=" & ClockSec & "=" & ClockMSec
		
		End IF
		
		
		'===========================------------ 
		'--=[ TIME IS OVER ]=---
		'===========================------------ 
		If ClockMin = -1 then 'Time's over!
		
			FlashForms ShootAgainLight1, 500,50, 0

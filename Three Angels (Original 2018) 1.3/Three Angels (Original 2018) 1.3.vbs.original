Sub TrapDoorDT_Hit 
		StopBallSearchTimer()

	If Locating > 0 or vpTilted = TRUE then
	
		TrapDoorDT.IsDropped = True
		PlaySound "droptargetdropped"
		
		Exit Sub
	
	End If



	'-===============-------------   
	'--=[ WIZ MODE ]=-----------------------------------------------
	'-===============-------------   
	If LocatingWMBalls > 0 then

		TrapDoorDT.IsDropped = True
		PlaySound "droptargetdropped"
		
		Exit Sub 'Wiz Mode has been activated throught the WishMaster. And we are collecting the balls.

	End If

	If WizModeActive = TRUE then

		TrapDoorDT.IsDropped = False 'So it has to be raised!
		
		FlashForms TrapLight1, 500, 50, TrapLight1.State
		FlashForms TrapLight2, 500, 50, TrapLight2.State
		
		
		If WizModeOpeningWoundActive = TRUE then
		
			AzarSoundHitMetal()
			AzarSoundHitChimes()
		
		
		ElseIf WizModeFightingActive = TRUE then
		
			AzarSoundHitBloodyNew()
			
			HitLuzbelSoft()
		
		End If
		
		Exit Sub

	End If





	'There is a ball in the entrance ready to be cath, and we are trying to identify if its an angel or a demon!
	If TrapSECEntranceTimer.Enabled = TRUE then

		'Better no sound or it could mix the computer voices...
		
		'Azar = int(rnd*2)
		'If azar = 0 then
		'	PlaySound "vcom_access_denied"
		'Else
		'	PlaySound "vcom_pleasehold"
		'End If
	End If


	'----------------------------------------------------------------
	' THE TRAP DOOR has been raised for an important event:
	'----------------------------------------------------------------
	'	1.- The TRAP has cought something and we are trying to identify it. So no mess with it.
	'	2.- The DEMON is Trying to Escape, and when it reach the opto or kicker we will know that it has been liberated
	'	3.- The ANGEL has been liberated, and when it reach the opto or kicker we will know that it has been liberated


	TrapDoorDT.IsDropped = False 'So it has to be raised!

	FlashForms TrapLight1, 500, 50, 0'TrapLight2.State
	FlashForms TrapLight2, 500, 50, 0'TrapLight2.State
	
	AzarSoundHitMetal()
	AzarSoundHitChimes()

End Sub













		'-----------------------------------
		
			TrapBlinkInterval = 200
			UpdateAngelTrapLevelLites()
			
				TrapHeartTimer.UserValue = 10
				TrapHeartTimer.Interval = 500 + 9000
			
				TrapGoingUpDownTimer.UserValue = 140
				TrapGoingUpDownTimer.Interval = 6000 + 9000
		
		End Select
		
		
		TrapHeartTimer.Enabled = TRUE 'ANGEL BREATH!
		TrapGoingUpDownTimer.Enabled = TRUE 'The trap will try to destroy the Angel!


	End If





	'------------------------------------------------------------------
	'--=[ DEMON INSIDE THE TRAP ]=-----
	'------------------------------------------------------------------
	If TrapTurnedON = TRUE and DemonInsideTrap = TRUE then


		Select Case (DemonInLevel)
		'-----------------------------------
		Case 1 '      ---=[ LEVEL 001 ]=---
		'-----------------------------------		
		
			'If the demon was to flee we raise the trap entrance door. If you lost the ball before the demon fleed the door kept raised and that's wrong.
			If TrapDoorDT.IsDropped = 0 then
			
				TrapDoorDT.IsDropped = True
				TrapDoorDT.IsDropped = True
				PlaySound "droptargetdropped"
			
			End If
			
			TrapBlinkInterval = 200
			TrapBlinkInterval2 = 150
			UpdateDemonTrapLevelLites() 'Turn on/off lites accordin 2 demon position on trap
			
		
		'-----------------------------------
		Case 2 '      ---=[ LEVEL 002 ]=---
		'-----------------------------------
		
			TrapBlinkInterval = 200
			TrapBlinkInterval2 = 150
			UpdateDemonTrapLevelLites() 'Turn on/off lites accordin 2 demon position on trap
		
		
		'-----------------------------------
		Case 3 '      ---=[ LEVEL 003 ]=---
		'-----------------------------------		
		
			TrapBlinkInterval = 200
			UpdateDemonFleeingTrapLevelLites() 'Turn on/off lites accordin 2 demon position on trap
			
			
				TrapGoingUpDownTimer.UserValue = -1		
				TrapGoingUpDownTimer.Interval = 5000
				TrapGoingUpDownTimer.Enabled = TRUE 'Demon will start fleeing again in 5 secs... 
		
		End Select

	End If

End Sub






